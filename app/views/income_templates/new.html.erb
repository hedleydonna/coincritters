<div class="w-full max-w-4xl mx-auto">
  <div class="mb-6">
    <div class="flex items-center gap-3 mb-2">
      <%= link_to income_templates_path(return_to: @return_to),
            class: "inline-flex items-center justify-center bg-gray-100 hover:bg-gray-200 text-gray-700 p-3 rounded-lg transition-colors min-h-[44px] min-w-[44px]",
            title: "Cancel" do %>
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
        </svg>
      <% end %>
      <h1 class="text-3xl font-bold text-gray-900">New Income Source</h1>
    </div>
    <p class="text-gray-600 mt-2">Create a money in source that will be used to generate income events in your monthly budgets</p>
  </div>
  <%= render "form" %>
</div>

