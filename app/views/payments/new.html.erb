<div class="max-w-2xl mx-auto py-8 px-4">
  <div class="mb-6">
    <h1 class="text-3xl font-bold text-gray-900 mb-2">Add Payment</h1>
    <%= link_to "â† Back to Expenses", expenses_path, class: "text-gray-600 hover:text-gray-900 font-medium" %>
  </div>

  <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-8">
    <%= form_with model: @payment, url: payments_path, class: "space-y-6" do |f| %>
      <% if @payment.errors.any? %>
        <div class="bg-red-50 border border-red-200 rounded-lg p-4 mb-6">
          <h3 class="text-red-800 font-semibold mb-2">
            <%= pluralize(@payment.errors.count, "error") %> prevented this payment from being saved:
          </h3>
          <ul class="list-disc list-inside text-red-700 space-y-1">
            <% @payment.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div>
        <%= f.label :expense_id, "Expense", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= f.collection_select :expense_id, @expenses, :id, :display_name, 
              { prompt: "Select an expense" }, 
              { class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500" } %>
      </div>

      <div>
        <%= f.label :amount, "Amount", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <div class="relative">
          <span class="absolute left-3 top-2 text-gray-500">$</span>
          <%= f.number_field :amount, 
                step: "0.01", 
                min: "0.01",
                placeholder: "0.00",
                class: "w-full px-4 py-2 pl-8 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
        </div>
      </div>

      <div>
        <%= f.label :spent_on, "Date", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= f.date_field :spent_on, 
              class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
      </div>

      <div>
        <%= f.label :notes, "Notes (optional)", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= f.text_area :notes, 
              rows: 3,
              placeholder: "Optional notes about this payment...",
              class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
      </div>

      <div class="flex gap-4 pt-4">
        <%= f.submit "Add Payment", 
              class: "bg-blue-600 hover:bg-blue-700 text-white font-semibold px-6 py-3 rounded-lg transition-colors cursor-pointer" %>
        <%= link_to "Cancel", expenses_path, 
              class: "bg-gray-200 hover:bg-gray-300 text-gray-700 font-semibold px-6 py-3 rounded-lg transition-colors" %>
      </div>
    <% end %>
  </div>
</div>

