<div class="min-h-screen bg-gradient-to-br from-purple-600 to-pink-600 flex items-center justify-center">
  <div class="bg-white rounded-2xl shadow-2xl p-10 max-w-md w-full">
    <h2 class="text-4xl font-bold text-center mb-8">Join CoinCritters!</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { data: { turbo: false } }) do |f| %>
      <%= csrf_meta_tags %>   <!-- THIS LINE IS THE FIX -->

      <div class="field mb-6">
        <%= f.text_field :display_name, autocomplete: "name", placeholder: "Display name (optional)", class: "w-full px-4 py-3 border rounded-lg" %>
      </div>

      <div class="field mb-6">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", class: "w-full px-4 py-3 border rounded-lg" %>
      </div>

      <div class="field mb-6">
        <%= f.password_field :password, autocomplete: "new-password", placeholder: "Password (6+ characters)", class: "w-full px-4 py-3 border rounded-lg" %>
      </div>

      <div class="field mb-8">
        <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Confirm password", class: "w-full px-4 py-3 border rounded-lg" %>
      </div>

      <div class="actions">
        <%= f.submit "Sign up", class: "w-full bg-pink-600 hover:bg-pink-700 text-white font-bold py-4 rounded-lg text-xl" %>
      </div>
    <% end %>

    <div class="text-center mt-6">
      <%= link_to "â† Already have an account?", new_user_session_path, class: "text-purple-600 font-bold" %>
    </div>
  </div>
</div>
