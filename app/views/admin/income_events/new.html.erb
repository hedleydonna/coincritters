<div class="min-h-screen bg-gray-50">
  <div class="max-w-2xl mx-auto py-8 px-4">
    <div class="mb-8 flex justify-between items-center">
      <div>
        <h1 class="text-4xl font-bold text-transparent bg-clip-text bg-gradient-to-r from-purple-600 to-pink-600">
          New Income Event
        </h1>
        <p class="text-gray-600 mt-2">Create a new income event</p>
      </div>
      <%= link_to "â† Back to Income Events", admin_income_events_path, class: "text-purple-600 hover:text-purple-700 font-medium" %>
    </div>

    <div class="bg-white rounded-xl shadow-lg p-8">
      <%= form_with(model: [:admin, @income_event], class: "space-y-6") do |f| %>
        <%= render "devise/shared/error_messages", resource: @income_event %>

        <div class="field">
          <%= f.label :user_id, "User", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.collection_select :user_id, @users, :id, :email, { prompt: "Select a user" }, class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-purple-500 focus:border-purple-500" %>
        </div>

        <div class="field">
          <%= f.label :income_template_id, "Income Template (optional)", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.collection_select :income_template_id, @income_templates, :id, :name, { prompt: "Select an income template (optional)", include_blank: "None" }, class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-purple-500 focus:border-purple-500" %>
        </div>

        <div class="field">
          <%= f.label :custom_label, "Custom Label", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.text_field :custom_label, placeholder: "e.g., Paycheck, Bonus, Freelance", class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-purple-500 focus:border-purple-500" %>
          <p class="mt-1 text-sm text-gray-500">Default: "Paycheck"</p>
        </div>

        <div class="field">
          <%= f.label :month_year, "Month/Year (YYYY-MM)", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.text_field :month_year, placeholder: "2025-12", class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-purple-500 focus:border-purple-500" %>
        </div>

        <div class="field">
          <div class="flex items-start gap-3">
            <%= f.check_box :apply_to_next_month, 
                  { checked: false },
                  class: "mt-1 h-4 w-4 text-purple-600 focus:ring-purple-500 border-gray-300 rounded" %>
            <div>
              <%= f.label :apply_to_next_month, "Defer to next month", class: "text-sm font-medium text-gray-700 cursor-pointer" %>
              <p class="text-sm text-gray-500">When checked, this income counts toward next month's budget.</p>
            </div>
          </div>
        </div>

        <div class="field">
          <%= f.label :received_on, "Received On", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.date_field :received_on, class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-purple-500 focus:border-purple-500" %>
        </div>

        <div class="field">
          <%= f.label :actual_amount, "Actual Amount", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.number_field :actual_amount, step: "0.01", class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-purple-500 focus:border-purple-500" %>
        </div>

        <div class="field">
          <%= f.label :notes, "Notes (optional)", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.text_area :notes, rows: 4, class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-purple-500 focus:border-purple-500" %>
        </div>

        <div class="actions">
          <%= f.submit "Create Income Event", class: "w-full bg-purple-600 hover:bg-purple-700 text-white font-bold py-3 px-6 rounded-lg transition duration-200 shadow-lg hover:shadow-xl cursor-pointer" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

