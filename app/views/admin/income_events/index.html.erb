<div class="min-h-screen bg-gray-50">
  <div class="max-w-7xl mx-auto py-8 px-4">
    <div class="mb-8 flex justify-between items-center">
      <div>
        <h1 class="text-4xl font-bold text-transparent bg-clip-text bg-gradient-to-r from-purple-600 to-pink-600">
          Manage Income Events
        </h1>
        <p class="text-gray-600 mt-2">View and manage all income event records</p>
      </div>
      <div class="flex gap-4">
        <%= link_to "New Income Event", new_admin_income_event_path, class: "bg-purple-600 hover:bg-purple-700 text-white font-bold py-2 px-4 rounded-lg transition duration-200 shadow-lg hover:shadow-xl" %>
        <%= link_to "← Back to Admin Dashboard", admin_root_path, class: "text-purple-600 hover:text-purple-700 font-medium" %>
      </div>
    </div>

    <div class="bg-white rounded-xl shadow-lg p-6">
      <% if @income_events.any? %>
        <div class="overflow-x-auto">
          <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
              <tr>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">User</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Income</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Type</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Month/Year</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Amount</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Received</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
              </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
              <% @income_events.each do |income_event| %>
                <tr>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900"><%= income_event.user.display_name.presence || income_event.user.email.split("@").first.capitalize %></td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500"><%= income_event.income_template&.name || "—" %></td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500"><%= income_event.custom_label %></td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500"><%= income_event.month_year %></td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-green-600 font-semibold">$<%= number_with_delimiter(income_event.actual_amount, delimiter: ",") %></td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500"><%= income_event.received_on.strftime("%b %d, %Y") %></td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                    <%= link_to "View", admin_income_event_path(income_event), class: "text-blue-600 hover:text-blue-900 mr-3" %>
                    <%= link_to "Edit", edit_admin_income_event_path(income_event), class: "text-purple-600 hover:text-purple-900 mr-3" %>
                    <%= button_to "Delete", admin_income_event_path(income_event), method: :delete,
                        data: { confirm: "Are you sure you want to delete this income event?", turbo_confirm: "Are you sure you want to delete this income event?" },
                        form: { style: "display: inline-block; margin: 0;" },
                        class: "text-red-600 hover:text-red-900 bg-transparent border-0 p-0 cursor-pointer" %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      <% else %>
        <p class="text-gray-500">No income event records found.</p>
      <% end %>
    </div>
  </div>
</div>

