<div class="min-h-screen bg-gray-50">
  <div class="max-w-4xl mx-auto py-8 px-4">
    <div class="mb-8 flex justify-between items-center">
      <div>
        <h1 class="text-4xl font-bold text-transparent bg-clip-text bg-gradient-to-r from-purple-600 to-pink-600">
          Income Event Details
        </h1>
        <p class="text-gray-600 mt-2">Details for income event</p>
      </div>
      <%= link_to "← Back to Income Events", admin_income_events_path, class: "text-purple-600 hover:text-purple-700 font-medium" %>
    </div>

    <div class="bg-white rounded-xl shadow-lg p-8 mb-8">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div>
          <p class="text-sm font-medium text-gray-500">User</p>
          <p class="mt-1 text-lg text-gray-900"><%= @income_event.user.display_name.presence || @income_event.user.email.split("@").first.capitalize %></p>
        </div>
        <div>
          <p class="text-sm font-medium text-gray-500">Income</p>
          <p class="mt-1 text-lg text-gray-900"><%= @income_event.income&.name || "—" %></p>
        </div>
        <div>
          <p class="text-sm font-medium text-gray-500">Custom Label</p>
          <p class="mt-1 text-lg text-gray-900"><%= @income_event.custom_label %></p>
        </div>
        <div>
          <p class="text-sm font-medium text-gray-500">Month/Year</p>
          <p class="mt-1 text-lg text-gray-900"><%= @income_event.month_year %></p>
        </div>
        <div>
          <p class="text-sm font-medium text-gray-500">Assigned Month/Year</p>
          <p class="mt-1 text-lg text-gray-900"><%= @income_event.assigned_month_year || "—" %></p>
        </div>
        <div>
          <p class="text-sm font-medium text-gray-500">Actual Amount</p>
          <p class="mt-1 text-2xl font-bold text-green-600">$<%= number_with_delimiter(@income_event.actual_amount, delimiter: ",") %></p>
        </div>
        <div>
          <p class="text-sm font-medium text-gray-500">Received On</p>
          <p class="mt-1 text-lg text-gray-900"><%= @income_event.received_on.strftime("%B %d, %Y") %></p>
        </div>
        <% if @income_event.notes.present? %>
          <div class="md:col-span-2">
            <p class="text-sm font-medium text-gray-500">Notes</p>
            <p class="mt-1 text-lg text-gray-900 whitespace-pre-wrap"><%= @income_event.notes %></p>
          </div>
        <% end %>
        <div>
          <p class="text-sm font-medium text-gray-500">Created At</p>
          <p class="mt-1 text-lg text-gray-900"><%= @income_event.created_at.strftime("%b %d, %Y %H:%M") %></p>
        </div>
        <div>
          <p class="text-sm font-medium text-gray-500">Last Updated</p>
          <p class="mt-1 text-lg text-gray-900"><%= @income_event.updated_at.strftime("%b %d, %Y %H:%M") %></p>
        </div>
      </div>
    </div>

    <div class="flex justify-between gap-4">
      <div>
        <%= link_to "New Income Event", new_admin_income_event_path, class: "bg-green-600 hover:bg-green-700 text-white font-bold py-2 px-4 rounded-lg transition duration-200 shadow-lg hover:shadow-xl" %>
      </div>
      <div class="flex gap-4">
        <%= link_to "Edit Income Event", edit_admin_income_event_path(@income_event), class: "bg-purple-600 hover:bg-purple-700 text-white font-bold py-2 px-4 rounded-lg" %>
        <%= button_to "Delete Income Event", admin_income_event_path(@income_event), method: :delete,
                    data: { confirm: "Are you sure you want to delete this income event? This action cannot be undone.", turbo_confirm: "Are you sure you want to delete this income event? This action cannot be undone." },
                    form: { data: { turbo_confirm: "Are you sure you want to delete this income event? This action cannot be undone." } },
                    class: "bg-red-500 hover:bg-red-600 text-white font-bold py-2 px-4 rounded-lg" %>
      </div>
    </div>
  </div>
</div>

