<div class="min-h-screen bg-gray-50">
  <div class="max-w-2xl mx-auto py-8 px-4">
    <div class="mb-8 flex justify-between items-center">
      <div>
        <h1 class="text-4xl font-bold text-transparent bg-clip-text bg-gradient-to-r from-purple-600 to-pink-600">
          Edit Variable Spending
        </h1>
        <p class="text-gray-600 mt-2">Editing spending on <%= @variable_spending.spent_on.strftime("%B %d, %Y") %></p>
      </div>
      <%= link_to "â† Back to Variable Spending", admin_variable_spending_path(@variable_spending), class: "text-purple-600 hover:text-purple-700 font-medium" %>
    </div>

    <div class="bg-white rounded-xl shadow-lg p-8">
      <%= form_with(model: [:admin, @variable_spending], class: "space-y-6") do |f| %>
        <%= render "devise/shared/error_messages", resource: @variable_spending %>

        <div class="field">
          <%= f.label :envelope_id, "Envelope", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.collection_select :envelope_id, @envelopes, :id, :display_name_with_budget, { prompt: "Select an envelope" }, class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-purple-500 focus:border-purple-500" %>
        </div>

        <div class="field">
          <%= f.label :spending_group_name, "Spending Group Name", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.text_field :spending_group_name, placeholder: "e.g., Groceries, Entertainment", class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-purple-500 focus:border-purple-500" %>
          <p class="mt-1 text-sm text-gray-500">Category name for this spending (usually matches envelope name)</p>
        </div>

        <div class="field">
          <%= f.label :amount, "Amount", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.number_field :amount, step: "0.01", min: "0.01", class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-purple-500 focus:border-purple-500" %>
          <p class="mt-1 text-sm text-gray-500">Amount spent (must be greater than 0)</p>
        </div>

        <div class="field">
          <%= f.label :spent_on, "Date", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.date_field :spent_on, class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-purple-500 focus:border-purple-500" %>
          <p class="mt-1 text-sm text-gray-500">Date when the spending occurred</p>
        </div>

        <div class="field">
          <%= f.label :notes, "Notes (optional)", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.text_area :notes, rows: 3, placeholder: "Add any notes about this spending...", class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-purple-500 focus:border-purple-500" %>
        </div>

        <div class="actions">
          <%= f.submit "Update Variable Spending", class: "w-full bg-purple-600 hover:bg-purple-700 text-white font-bold py-3 px-6 rounded-lg transition duration-200 shadow-lg hover:shadow-xl cursor-pointer" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

