<div class="min-h-screen bg-gradient-to-br from-purple-600 to-pink-600 py-12 px-4">
  <div class="max-w-7xl mx-auto">
    <div class="mb-8 flex justify-between items-center">
      <div>
        <h1 class="text-5xl font-bold text-white mb-2">Manage Incomes</h1>
        <p class="text-purple-100 text-lg">View and manage all income sources</p>
      </div>
      <%= link_to "‚Üê Back to Admin Dashboard", admin_root_path, class: "text-white hover:text-purple-200 font-medium" %>
    </div>

    <!-- Stats Cards -->
    <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-8">
      <div class="bg-white rounded-2xl shadow-2xl p-8 transform hover:scale-105 transition duration-200">
        <div class="flex items-center justify-between">
          <div>
            <h3 class="text-sm font-medium text-gray-500 uppercase tracking-wide">Total Incomes</h3>
            <p class="text-4xl font-bold text-transparent bg-clip-text bg-gradient-to-r from-purple-600 to-pink-600 mt-2"><%= @total_incomes %></p>
          </div>
          <div class="text-4xl">üí∞</div>
        </div>
      </div>
      <div class="bg-white rounded-2xl shadow-2xl p-8 transform hover:scale-105 transition duration-200">
        <div class="flex items-center justify-between">
          <div>
            <h3 class="text-sm font-medium text-gray-500 uppercase tracking-wide">Active Incomes</h3>
            <p class="text-4xl font-bold text-green-600 mt-2"><%= @active_incomes %></p>
          </div>
          <div class="text-4xl">‚úÖ</div>
        </div>
      </div>
      <div class="bg-white rounded-2xl shadow-2xl p-8 transform hover:scale-105 transition duration-200">
        <div class="flex items-center justify-between">
          <div>
            <h3 class="text-sm font-medium text-gray-500 uppercase tracking-wide">Auto-Create</h3>
            <p class="text-4xl font-bold text-blue-600 mt-2"><%= @auto_create_incomes %></p>
          </div>
          <div class="text-4xl">‚öôÔ∏è</div>
        </div>
      </div>
      <div class="bg-white rounded-2xl shadow-2xl p-8 transform hover:scale-105 transition duration-200">
        <div class="flex items-center justify-between">
          <div>
            <h3 class="text-sm font-medium text-gray-500 uppercase tracking-wide">Inactive Incomes</h3>
            <p class="text-4xl font-bold text-gray-600 mt-2"><%= @total_incomes - @active_incomes %></p>
          </div>
          <div class="text-4xl">‚è∏Ô∏è</div>
        </div>
      </div>
    </div>

    <div class="bg-white rounded-2xl shadow-2xl p-8">
      <% if @incomes.any? %>
        <div class="overflow-x-auto">
          <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gradient-to-r from-purple-50 to-pink-50">
              <tr>
                <th class="px-6 py-4 text-left text-xs font-bold text-gray-700 uppercase tracking-wider">User</th>
                <th class="px-6 py-4 text-left text-xs font-bold text-gray-700 uppercase tracking-wider">Name</th>
                <th class="px-6 py-4 text-left text-xs font-bold text-gray-700 uppercase tracking-wider">Frequency</th>
                <th class="px-6 py-4 text-left text-xs font-bold text-gray-700 uppercase tracking-wider">Amount</th>
                <th class="px-6 py-4 text-left text-xs font-bold text-gray-700 uppercase tracking-wider">Status</th>
                <th class="px-6 py-4 text-left text-xs font-bold text-gray-700 uppercase tracking-wider">Auto-Create</th>
                <th class="px-6 py-4 text-left text-xs font-bold text-gray-700 uppercase tracking-wider">Created</th>
                <th class="px-6 py-4 text-left text-xs font-bold text-gray-700 uppercase tracking-wider">Actions</th>
              </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-100">
              <% @incomes.each do |income| %>
                <tr class="hover:bg-purple-50 transition duration-150">
                  <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                    <%= income.user.email %>
                    <% if income.user.display_name.present? %>
                      <br><span class="text-xs text-gray-500"><%= income.user.display_name %></span>
                    <% end %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900 font-semibold"><%= income.name %></td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-600">
                    <span class="px-2 py-1 bg-blue-100 text-blue-800 rounded-full text-xs font-medium">
                      <%= income.frequency.humanize %>
                    </span>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm font-bold text-gray-900">
                    $<%= number_with_delimiter(income.estimated_amount, delimiter: ",") %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <% if income.active? %>
                      <span class="px-3 py-1 inline-flex text-xs leading-5 font-semibold rounded-full bg-green-100 text-green-800 border border-green-200">Active</span>
                    <% else %>
                      <span class="px-3 py-1 inline-flex text-xs leading-5 font-semibold rounded-full bg-gray-100 text-gray-800 border border-gray-200">Inactive</span>
                    <% end %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <% if income.auto_create? %>
                      <span class="px-3 py-1 inline-flex text-xs leading-5 font-semibold rounded-full bg-blue-100 text-blue-800 border border-blue-200">
                        <% if income.due_date.present? %>
                          <%= income.due_date.strftime("%b %d") %>
                        <% else %>
                          Auto-create
                        <% end %>
                      </span>
                    <% else %>
                      <span class="px-3 py-1 inline-flex text-xs leading-5 font-semibold rounded-full bg-gray-100 text-gray-500 border border-gray-200">Manual</span>
                    <% end %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-600"><%= income.created_at.strftime("%b %d, %Y") %></td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                    <%= link_to "View", admin_income_path(income), class: "text-purple-600 hover:text-purple-800 font-semibold mr-4 transition duration-150" %>
                    <%= link_to "Edit", edit_admin_income_path(income), class: "text-pink-600 hover:text-pink-800 font-semibold mr-4 transition duration-150" %>
                    <%= button_to "Delete", admin_income_path(income), method: :delete,
                        data: { confirm: "Are you sure you want to delete this income?", turbo_confirm: "Are you sure you want to delete this income?" },
                        form: { style: "display: inline-block; margin: 0;", data: { turbo_confirm: "Are you sure you want to delete this income?" } },
                        class: "text-red-600 hover:text-red-800 font-semibold bg-transparent border-0 p-0 cursor-pointer transition duration-150" %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      <% else %>
        <div class="text-center py-12">
          <p class="text-gray-500 text-lg">No incomes found.</p>
        </div>
      <% end %>
    </div>
  </div>
</div>

