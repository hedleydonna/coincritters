<div class="min-h-screen bg-gray-50">
  <div class="max-w-2xl mx-auto py-8 px-4">
    <div class="mb-8 flex justify-between items-center">
      <h1 class="text-4xl font-bold text-transparent bg-clip-text bg-gradient-to-r from-purple-600 to-pink-600">
        Edit User
      </h1>
      <%= link_to "â† Back to Users", admin_users_path, class: "text-purple-600 hover:text-purple-700 font-medium" %>
    </div>

    <div class="bg-white rounded-xl shadow-lg p-8">
      <%= form_with model: [:admin, @user], local: true do |f| %>
        <% if @user.errors.any? %>
          <div class="mb-6 p-4 bg-red-100 border border-red-400 text-red-700 rounded-lg">
            <h3 class="font-bold mb-2"><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h3>
            <ul class="list-disc list-inside">
              <% @user.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="space-y-6">
          <div>
            <%= f.label :email, class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= f.email_field :email, class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent" %>
          </div>

          <div>
            <%= f.label :display_name, class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= f.text_field :display_name, class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent" %>
          </div>

          <div>
            <div class="flex items-center">
              <%= f.check_box :admin, class: "h-4 w-4 text-purple-600 focus:ring-purple-500 border-gray-300 rounded" %>
              <%= f.label :admin, "Admin User", class: "ml-2 block text-sm text-gray-700" %>
            </div>
            <p class="mt-1 text-sm text-gray-500">Grant admin privileges to this user</p>
          </div>
        </div>

        <div class="mt-8 flex gap-4">
          <%= f.submit "Update User", class: "bg-purple-600 hover:bg-purple-700 text-white font-bold py-3 px-6 rounded-lg" %>
          <%= link_to "Cancel", admin_user_path(@user), class: "bg-gray-500 hover:bg-gray-600 text-white font-bold py-3 px-6 rounded-lg" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

