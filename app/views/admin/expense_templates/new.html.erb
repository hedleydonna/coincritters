<div class="min-h-screen bg-gray-50">
  <div class="max-w-2xl mx-auto py-8 px-4">
    <div class="mb-8 flex justify-between items-center">
      <div>
        <h1 class="text-4xl font-bold text-transparent bg-clip-text bg-gradient-to-r from-purple-600 to-pink-600">
          New Expense Template
        </h1>
        <p class="text-gray-600 mt-2">Create a new expense template</p>
      </div>
      <%= link_to "â† Back to Templates", admin_expense_templates_path, class: "text-purple-600 hover:text-purple-700 font-medium" %>
    </div>

    <div class="bg-white rounded-xl shadow-lg p-8">
      <%= form_with(model: [:admin, @expense_template], class: "space-y-6") do |f| %>
        <%= render "devise/shared/error_messages", resource: @expense_template %>

        <div class="field">
          <%= f.label :user_id, "User", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.collection_select :user_id, @users, :id, :email, { prompt: "Select a user" }, class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-purple-500 focus:border-purple-500" %>
        </div>

        <div class="field">
          <%= f.label :name, "Template Name", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.text_field :name, class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-purple-500 focus:border-purple-500" %>
        </div>

        <div class="field">
          <%= f.label :group_type, "Group Type", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.select :group_type, options_for_select([["Fixed", "fixed"], ["Variable", "variable"]], @expense_template.group_type), {}, class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-purple-500 focus:border-purple-500" %>
        </div>

        <div class="field">
          <%= f.label :default_amount, "Default Amount", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.number_field :default_amount, step: "0.01", class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-purple-500 focus:border-purple-500" %>
        </div>

        <div class="field">
          <div class="flex items-center">
            <%= f.check_box :is_savings, class: "h-4 w-4 text-purple-600 focus:ring-purple-500 border-gray-300 rounded" %>
            <%= f.label :is_savings, "Savings Pot", class: "ml-2 block text-sm text-gray-700" %>
          </div>
        </div>

        <div class="field">
          <div class="flex items-center">
            <%= f.check_box :auto_create, class: "h-4 w-4 text-purple-600 focus:ring-purple-500 border-gray-300 rounded" %>
            <%= f.label :auto_create, "Auto-Create", class: "ml-2 block text-sm text-gray-700" %>
          </div>
        </div>

        <div class="field">
          <div class="flex items-center">
            <%= f.check_box :is_active, class: "h-4 w-4 text-purple-600 focus:ring-purple-500 border-gray-300 rounded" %>
            <%= f.label :is_active, "Active", class: "ml-2 block text-sm text-gray-700" %>
          </div>
        </div>

        <div class="actions">
          <%= f.submit "Create Expense Template", class: "w-full bg-purple-600 hover:bg-purple-700 text-white font-bold py-3 px-6 rounded-lg transition duration-200 shadow-lg hover:shadow-xl cursor-pointer" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

