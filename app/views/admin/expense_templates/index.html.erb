<div class="min-h-screen bg-gradient-to-br from-purple-600 to-pink-600 py-12 px-4">
  <div class="max-w-7xl mx-auto">
    <div class="mb-8 flex justify-between items-center">
      <div>
        <h1 class="text-5xl font-bold text-white mb-2">Manage Expense Templates</h1>
        <p class="text-purple-100 text-lg">View and manage all expense templates</p>
      </div>
      <%= link_to "+ New Template", new_admin_expense_template_path, class: "bg-white text-purple-600 hover:bg-purple-50 font-bold py-3 px-6 rounded-lg transition duration-200 shadow-lg hover:shadow-xl" %>
      <%= link_to "‚Üê Back to Admin Dashboard", admin_root_path, class: "text-white hover:text-purple-200 font-medium ml-4" %>
    </div>

    <!-- Stats Cards -->
    <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-8">
      <div class="bg-white rounded-2xl shadow-2xl p-8 transform hover:scale-105 transition duration-200">
        <div class="flex items-center justify-between">
          <div>
            <h3 class="text-sm font-medium text-gray-500 uppercase tracking-wide">Total Templates</h3>
            <p class="text-4xl font-bold text-transparent bg-clip-text bg-gradient-to-r from-purple-600 to-pink-600 mt-2"><%= @total_templates %></p>
          </div>
          <div class="text-4xl">üìÅ</div>
        </div>
      </div>
      <div class="bg-white rounded-2xl shadow-2xl p-8 transform hover:scale-105 transition duration-200">
        <div class="flex items-center justify-between">
          <div>
            <h3 class="text-sm font-medium text-gray-500 uppercase tracking-wide">Fixed</h3>
            <p class="text-4xl font-bold text-blue-600 mt-2"><%= @fixed_templates %></p>
          </div>
          <div class="text-4xl">üîí</div>
        </div>
      </div>
      <div class="bg-white rounded-2xl shadow-2xl p-8 transform hover:scale-105 transition duration-200">
        <div class="flex items-center justify-between">
          <div>
            <h3 class="text-sm font-medium text-gray-500 uppercase tracking-wide">Variable</h3>
            <p class="text-4xl font-bold text-green-600 mt-2"><%= @variable_templates %></p>
          </div>
          <div class="text-4xl">üìä</div>
        </div>
      </div>
      <div class="bg-white rounded-2xl shadow-2xl p-8 transform hover:scale-105 transition duration-200">
        <div class="flex items-center justify-between">
          <div>
            <h3 class="text-sm font-medium text-gray-500 uppercase tracking-wide">Savings</h3>
            <p class="text-4xl font-bold text-pink-600 mt-2"><%= @savings_templates %></p>
          </div>
          <div class="text-4xl">üí∞</div>
        </div>
      </div>
    </div>

    <div class="bg-white rounded-2xl shadow-2xl p-8">
      <% if @expense_templates.any? %>
        <div class="overflow-x-auto">
          <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gradient-to-r from-purple-50 to-pink-50">
              <tr>
                <th class="px-6 py-4 text-left text-xs font-bold text-gray-700 uppercase tracking-wider">User</th>
                <th class="px-6 py-4 text-left text-xs font-bold text-gray-700 uppercase tracking-wider">Name</th>
                <th class="px-6 py-4 text-left text-xs font-bold text-gray-700 uppercase tracking-wider">Frequency</th>
                <th class="px-6 py-4 text-left text-xs font-bold text-gray-700 uppercase tracking-wider">Due Date</th>
                <th class="px-6 py-4 text-left text-xs font-bold text-gray-700 uppercase tracking-wider">Default Amount</th>
                <th class="px-6 py-4 text-left text-xs font-bold text-gray-700 uppercase tracking-wider">Auto-Create</th>
                <th class="px-6 py-4 text-left text-xs font-bold text-gray-700 uppercase tracking-wider">Created</th>
                <th class="px-6 py-4 text-left text-xs font-bold text-gray-700 uppercase tracking-wider">Actions</th>
              </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-100">
              <% @expense_templates.each do |template| %>
                <tr class="hover:bg-purple-50 transition duration-150">
                  <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                    <%= template.user.email %>
                    <% if template.user.display_name.present? %>
                      <br><span class="text-xs text-gray-500"><%= template.user.display_name %></span>
                    <% end %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900 font-semibold"><%= template.name %></td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <span class="px-3 py-1 inline-flex text-xs leading-5 font-semibold rounded-full bg-blue-100 text-blue-800 border border-blue-200">
                      <%= template.frequency_text %>
                    </span>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                    <% if template.due_date.present? %>
                      <%= template.due_date.strftime("%b %d") %>
                    <% else %>
                      <span class="text-gray-400">‚Äî</span>
                    <% end %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm font-bold text-gray-900">
                    <% if template.default_amount.present? %>
                      $<%= number_with_delimiter(template.default_amount, delimiter: ",") %>
                    <% else %>
                      <span class="text-gray-400">‚Äî</span>
                    <% end %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <% if template.auto_create? %>
                      <span class="px-3 py-1 inline-flex text-xs leading-5 font-semibold rounded-full bg-blue-100 text-blue-800 border border-blue-200">Yes</span>
                    <% else %>
                      <span class="px-3 py-1 inline-flex text-xs leading-5 font-semibold rounded-full bg-gray-100 text-gray-500 border border-gray-200">No</span>
                    <% end %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-600"><%= template.created_at.strftime("%b %d, %Y") %></td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                    <%= link_to "View", admin_expense_template_path(template), class: "text-purple-600 hover:text-purple-800 font-semibold mr-4 transition duration-150" %>
                    <%= link_to "Edit", edit_admin_expense_template_path(template), class: "text-pink-600 hover:text-pink-800 font-semibold mr-4 transition duration-150" %>
                    <%= button_to "Delete", admin_expense_template_path(template), method: :delete,
                        data: { confirm: "Are you sure you want to delete this template? All associated expenses will be deleted.", turbo_confirm: "Are you sure you want to delete this template? All associated expenses will be deleted." },
                        form: { style: "display: inline-block; margin: 0;", data: { turbo_confirm: "Are you sure you want to delete this template? All associated expenses will be deleted." } },
                        class: "text-red-600 hover:text-red-800 font-semibold bg-transparent border-0 p-0 cursor-pointer transition duration-150" %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      <% else %>
        <div class="text-center py-12">
          <p class="text-gray-500 text-lg mb-4">No expense templates found.</p>
          <%= link_to "Create First Template", new_admin_expense_template_path, class: "bg-purple-600 hover:bg-purple-700 text-white font-bold py-3 px-6 rounded-lg transition duration-200 shadow-lg hover:shadow-xl" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

