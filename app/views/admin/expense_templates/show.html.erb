<div class="min-h-screen bg-gradient-to-br from-purple-600 to-pink-600 py-12 px-4">
  <div class="max-w-4xl mx-auto">
    <div class="mb-8 flex justify-between items-center">
      <h1 class="text-5xl font-bold text-white mb-2">Expense Template Details</h1>
      <%= link_to "â† Back to Templates", admin_expense_templates_path, class: "text-white hover:text-purple-200 font-medium" %>
    </div>

    <div class="bg-white rounded-2xl shadow-2xl p-8">
      <div class="space-y-6">
        <div>
          <label class="block text-sm font-medium text-gray-500">User</label>
          <p class="mt-1 text-lg text-gray-900">
            <%= @expense_template.user.email %>
            <% if @expense_template.user.display_name.present? %>
              <span class="text-gray-500">(<%= @expense_template.user.display_name %>)</span>
            <% end %>
          </p>
        </div>

        <div>
          <label class="block text-sm font-medium text-gray-500">Template Name</label>
          <p class="mt-1 text-2xl font-bold text-gray-900"><%= @expense_template.name %></p>
        </div>

        <div>
          <label class="block text-sm font-medium text-gray-500">Group Type</label>
          <p class="mt-1">
            <% if @expense_template.fixed? %>
              <span class="px-3 py-1 inline-flex text-sm leading-5 font-semibold rounded-full bg-blue-100 text-blue-800 border border-blue-200">Fixed</span>
              <p class="mt-2 text-sm text-gray-600">Recurring bills that are consistent (rent, Netflix, insurance)</p>
            <% else %>
              <span class="px-3 py-1 inline-flex text-sm leading-5 font-semibold rounded-full bg-green-100 text-green-800 border border-green-200">Variable</span>
              <p class="mt-2 text-sm text-gray-600">Flexible spending that varies (food, fun, entertainment)</p>
            <% end %>
          </p>
        </div>

        <div>
          <label class="block text-sm font-medium text-gray-500">Savings Pot</label>
          <p class="mt-1">
            <% if @expense_template.is_savings? %>
              <span class="px-3 py-1 inline-flex text-sm leading-5 font-semibold rounded-full bg-pink-100 text-pink-800 border border-pink-200">Yes - Savings Pot</span>
              <p class="mt-2 text-sm text-gray-600">This template is used for savings goals (emergency fund, vacation, etc.)</p>
            <% else %>
              <span class="px-3 py-1 inline-flex text-sm leading-5 font-semibold rounded-full bg-gray-100 text-gray-500 border border-gray-200">No</span>
            <% end %>
          </p>
        </div>

        <div>
          <label class="block text-sm font-medium text-gray-500">Default Amount</label>
          <p class="mt-1 text-2xl font-bold text-gray-900">
            <% if @expense_template.default_amount.present? %>
              $<%= number_with_delimiter(@expense_template.default_amount, delimiter: ",") %>
            <% else %>
              <span class="text-gray-400">Not set</span>
            <% end %>
          </p>
          <p class="mt-1 text-sm text-gray-600">Default amount to allocate when creating expenses from this template</p>
        </div>

        <div>
          <label class="block text-sm font-medium text-gray-500">Auto-Create</label>
          <p class="mt-1">
            <% if @expense_template.auto_create? %>
              <span class="px-3 py-1 inline-flex text-sm leading-5 font-semibold rounded-full bg-blue-100 text-blue-800 border border-blue-200">Enabled</span>
              <p class="mt-2 text-sm text-gray-600">Expenses from this template will be automatically created in monthly budgets</p>
            <% else %>
              <span class="px-3 py-1 inline-flex text-sm leading-5 font-semibold rounded-full bg-gray-100 text-gray-500 border border-gray-200">Disabled</span>
              <p class="mt-2 text-sm text-gray-600">Expenses must be manually created</p>
            <% end %>
          </p>
        </div>

        <div>
          <label class="block text-sm font-medium text-gray-500">Associated Expenses</label>
          <p class="mt-1 text-lg text-gray-900"><%= @expense_template.expenses.count %></p>
          <% if @expense_template.expenses.any? %>
            <p class="mt-1 text-sm text-gray-600">This template is used by <%= pluralize(@expense_template.expenses.count, "expense") %> across various monthly budgets</p>
          <% end %>
        </div>

        <div>
          <label class="block text-sm font-medium text-gray-500">Created</label>
          <p class="mt-1 text-lg text-gray-900"><%= @expense_template.created_at.strftime("%B %d, %Y at %I:%M %p") %></p>
        </div>

        <div>
          <label class="block text-sm font-medium text-gray-500">Last Updated</label>
          <p class="mt-1 text-lg text-gray-900"><%= @expense_template.updated_at.strftime("%B %d, %Y at %I:%M %p") %></p>
        </div>
      </div>

      <div class="mt-8 flex gap-4">
        <%= link_to "Edit Template", edit_admin_expense_template_path(@expense_template), class: "bg-purple-600 hover:bg-purple-700 text-white font-bold py-3 px-6 rounded-lg transition duration-200 shadow-lg hover:shadow-xl" %>
        <%= button_to "Delete Template", admin_expense_template_path(@expense_template), method: :delete,
            data: { confirm: "Are you sure you want to delete this template? All #{pluralize(@expense_template.expenses.count, 'associated expense')} will be deleted. This action cannot be undone.", turbo_confirm: "Are you sure you want to delete this template? All #{pluralize(@expense_template.expenses.count, 'associated expense')} will be deleted. This action cannot be undone." },
            form: { data: { turbo_confirm: "Are you sure you want to delete this template? All #{pluralize(@expense_template.expenses.count, 'associated expense')} will be deleted. This action cannot be undone." } },
            class: "bg-red-500 hover:bg-red-600 text-white font-bold py-3 px-6 rounded-lg transition duration-200 shadow-lg hover:shadow-xl" %>
      </div>
    </div>
  </div>
</div>

