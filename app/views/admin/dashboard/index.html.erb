<div class="min-h-screen bg-gradient-to-br from-purple-600 to-pink-600 py-12 px-4">
  <div class="max-w-7xl mx-auto">
    <!-- Header -->
    <div class="mb-8 text-center">
      <h1 class="text-5xl font-bold text-white mb-2">Admin Dashboard</h1>
      <p class="text-purple-100 text-lg">Manage your Willow application</p>
    </div>

    <!-- Stats Cards -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
      <div class="bg-white rounded-2xl shadow-2xl p-8 transform hover:scale-105 transition duration-200">
        <div class="flex items-center justify-between">
          <div>
            <h3 class="text-sm font-medium text-gray-500 uppercase tracking-wide">Total Users</h3>
            <p class="text-4xl font-bold text-transparent bg-clip-text bg-gradient-to-r from-purple-600 to-pink-600 mt-2"><%= @user_count %></p>
          </div>
          <div class="text-4xl">ðŸ‘¥</div>
        </div>
      </div>
      <div class="bg-white rounded-2xl shadow-2xl p-8 transform hover:scale-105 transition duration-200">
        <div class="flex items-center justify-between">
          <div>
            <h3 class="text-sm font-medium text-gray-500 uppercase tracking-wide">Admin Users</h3>
            <p class="text-4xl font-bold text-purple-600 mt-2"><%= User.where(admin: true).count %></p>
          </div>
          <div class="text-4xl">ðŸ‘‘</div>
        </div>
      </div>
      <div class="bg-white rounded-2xl shadow-2xl p-8 transform hover:scale-105 transition duration-200">
        <div class="flex items-center justify-between">
          <div>
            <h3 class="text-sm font-medium text-gray-500 uppercase tracking-wide">Total Incomes</h3>
            <p class="text-4xl font-bold text-green-600 mt-2"><%= @income_count %></p>
          </div>
          <div class="text-4xl">ðŸ’°</div>
        </div>
      </div>
      <div class="bg-white rounded-2xl shadow-2xl p-8 transform hover:scale-105 transition duration-200">
        <div class="flex items-center justify-between">
          <div>
            <h3 class="text-sm font-medium text-gray-500 uppercase tracking-wide">Active Incomes</h3>
            <p class="text-4xl font-bold text-pink-600 mt-2"><%= @active_income_count %></p>
          </div>
          <div class="text-4xl">âœ…</div>
        </div>
      </div>
    </div>

    <!-- Quick Actions -->
    <div class="bg-white rounded-2xl shadow-2xl p-8 mb-8">
      <h2 class="text-3xl font-bold text-transparent bg-clip-text bg-gradient-to-r from-purple-600 to-pink-600 mb-6">Quick Actions</h2>
      <div class="flex flex-wrap gap-4">
        <%= form_with url: admin_users_path, method: :get, local: true, class: "inline" do |f| %>
          <%= f.submit "Manage Users", class: "bg-purple-600 hover:bg-purple-700 text-white font-bold py-3 px-8 rounded-lg transition duration-200 shadow-lg hover:shadow-xl cursor-pointer border-0" %>
        <% end %>
        <%= form_with url: admin_incomes_path, method: :get, local: true, class: "inline" do |f| %>
          <%= f.submit "Manage Incomes", class: "bg-green-600 hover:bg-green-700 text-white font-bold py-3 px-8 rounded-lg transition duration-200 shadow-lg hover:shadow-xl cursor-pointer border-0" %>
        <% end %>
        <%= form_with url: dashboard_path, method: :get, local: true, class: "inline" do |f| %>
          <%= f.submit "Back to Dashboard", class: "bg-gray-500 hover:bg-gray-600 text-white font-bold py-3 px-8 rounded-lg transition duration-200 shadow-lg hover:shadow-xl cursor-pointer border-0" %>
        <% end %>
      </div>
    </div>

    <!-- Recent Activity -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
      <!-- Recent Users -->
      <div class="bg-white rounded-2xl shadow-2xl p-8">
        <h2 class="text-3xl font-bold text-transparent bg-clip-text bg-gradient-to-r from-purple-600 to-pink-600 mb-6">Recent Users</h2>
        <% if @recent_users.any? %>
          <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-200">
              <thead class="bg-gradient-to-r from-purple-50 to-pink-50">
                <tr>
                  <th class="px-6 py-4 text-left text-xs font-bold text-gray-700 uppercase tracking-wider">Email</th>
                  <th class="px-6 py-4 text-left text-xs font-bold text-gray-700 uppercase tracking-wider">Role</th>
                  <th class="px-6 py-4 text-left text-xs font-bold text-gray-700 uppercase tracking-wider">Actions</th>
                </tr>
              </thead>
              <tbody class="bg-white divide-y divide-gray-100">
                <% @recent_users.each do |user| %>
                  <tr class="hover:bg-purple-50 transition duration-150">
                    <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900"><%= user.email %></td>
                    <td class="px-6 py-4 whitespace-nowrap">
                      <% if user.admin? %>
                        <span class="px-3 py-1 inline-flex text-xs leading-5 font-semibold rounded-full bg-purple-100 text-purple-800 border border-purple-200">Admin</span>
                      <% else %>
                        <span class="px-3 py-1 inline-flex text-xs leading-5 font-semibold rounded-full bg-gray-100 text-gray-800 border border-gray-200">User</span>
                      <% end %>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                      <%= link_to "View", admin_user_path(user), class: "text-purple-600 hover:text-purple-800 font-semibold transition duration-150" %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        <% else %>
          <div class="text-center py-12">
            <p class="text-gray-500 text-lg">No users found.</p>
          </div>
        <% end %>
      </div>

      <!-- Recent Incomes -->
      <div class="bg-white rounded-2xl shadow-2xl p-8">
        <h2 class="text-3xl font-bold text-transparent bg-clip-text bg-gradient-to-r from-purple-600 to-pink-600 mb-6">Recent Incomes</h2>
        <% if @recent_incomes.any? %>
          <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-200">
              <thead class="bg-gradient-to-r from-purple-50 to-pink-50">
                <tr>
                  <th class="px-6 py-4 text-left text-xs font-bold text-gray-700 uppercase tracking-wider">User</th>
                  <th class="px-6 py-4 text-left text-xs font-bold text-gray-700 uppercase tracking-wider">Name</th>
                  <th class="px-6 py-4 text-left text-xs font-bold text-gray-700 uppercase tracking-wider">Amount</th>
                  <th class="px-6 py-4 text-left text-xs font-bold text-gray-700 uppercase tracking-wider">Actions</th>
                </tr>
              </thead>
              <tbody class="bg-white divide-y divide-gray-100">
                <% @recent_incomes.each do |income| %>
                  <tr class="hover:bg-purple-50 transition duration-150">
                    <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                      <%= income.user.email.split("@").first %>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900 font-semibold"><%= income.name %></td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm font-bold text-green-600">
                      $<%= number_with_delimiter(income.estimated_amount, delimiter: ",") %>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                      <%= link_to "View", admin_income_path(income), class: "text-purple-600 hover:text-purple-800 font-semibold transition duration-150" %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        <% else %>
          <div class="text-center py-12">
            <p class="text-gray-500 text-lg">No incomes found.</p>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

