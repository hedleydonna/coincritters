<div class="min-h-screen bg-gradient-to-br from-purple-600 to-pink-600 py-12 px-4">
  <div class="max-w-7xl mx-auto">
    <!-- Header -->
    <div class="mb-8 text-center">
      <h1 class="text-5xl font-bold text-white mb-2">Admin Dashboard</h1>
      <p class="text-purple-100 text-lg">Manage your Willow application</p>
    </div>

    <!-- Stats Cards -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-7 gap-6 mb-8">
      <div class="bg-white rounded-2xl shadow-2xl p-8 transform hover:scale-105 transition duration-200">
        <div class="flex items-center justify-between">
          <div>
            <h3 class="text-sm font-medium text-gray-500 uppercase tracking-wide">Total Users</h3>
            <p class="text-4xl font-bold text-transparent bg-clip-text bg-gradient-to-r from-purple-600 to-pink-600 mt-2"><%= @user_count %></p>
          </div>
          <div class="text-4xl">üë•</div>
        </div>
      </div>
      <div class="bg-white rounded-2xl shadow-2xl p-8 transform hover:scale-105 transition duration-200">
        <div class="flex items-center justify-between">
          <div>
            <h3 class="text-sm font-medium text-gray-500 uppercase tracking-wide">Admin Users</h3>
            <p class="text-4xl font-bold text-purple-600 mt-2"><%= User.where(admin: true).count %></p>
          </div>
          <div class="text-4xl">üëë</div>
        </div>
      </div>
      <div class="bg-white rounded-2xl shadow-2xl p-8 transform hover:scale-105 transition duration-200">
        <div class="flex items-center justify-between">
          <div>
            <h3 class="text-sm font-medium text-gray-500 uppercase tracking-wide">Total Incomes</h3>
            <p class="text-4xl font-bold text-green-600 mt-2"><%= @income_count %></p>
          </div>
          <div class="text-4xl">üí∞</div>
        </div>
      </div>
      <div class="bg-white rounded-2xl shadow-2xl p-8 transform hover:scale-105 transition duration-200">
        <div class="flex items-center justify-between">
          <div>
            <h3 class="text-sm font-medium text-gray-500 uppercase tracking-wide">Active Incomes</h3>
            <p class="text-4xl font-bold text-pink-600 mt-2"><%= @active_income_count %></p>
          </div>
          <div class="text-4xl">‚úÖ</div>
        </div>
      </div>
      <div class="bg-white rounded-2xl shadow-2xl p-8 transform hover:scale-105 transition duration-200">
        <div class="flex items-center justify-between">
          <div>
            <h3 class="text-sm font-medium text-gray-500 uppercase tracking-wide">Income Events</h3>
            <p class="text-4xl font-bold text-indigo-600 mt-2"><%= @income_event_count %></p>
          </div>
          <div class="text-4xl">üìÖ</div>
        </div>
      </div>
      <div class="bg-white rounded-2xl shadow-2xl p-8 transform hover:scale-105 transition duration-200">
        <div class="flex items-center justify-between">
          <div>
            <h3 class="text-sm font-medium text-gray-500 uppercase tracking-wide">Monthly Budgets</h3>
            <p class="text-4xl font-bold text-teal-600 mt-2"><%= @monthly_budget_count %></p>
          </div>
          <div class="text-4xl">üìä</div>
        </div>
      </div>
      <div class="bg-white rounded-2xl shadow-2xl p-8 transform hover:scale-105 transition duration-200">
        <div class="flex items-center justify-between">
          <div>
            <h3 class="text-sm font-medium text-gray-500 uppercase tracking-wide">Envelopes</h3>
            <p class="text-4xl font-bold text-orange-600 mt-2"><%= @envelope_count %></p>
          </div>
          <div class="text-4xl">‚úâÔ∏è</div>
        </div>
      </div>
    </div>

    <!-- Quick Actions -->
    <div class="bg-white rounded-2xl shadow-2xl p-8 mb-8">
      <h2 class="text-3xl font-bold text-transparent bg-clip-text bg-gradient-to-r from-purple-600 to-pink-600 mb-6">Quick Actions</h2>
      <div class="flex flex-wrap gap-4">
        <%= form_with url: admin_users_path, method: :get, local: true, class: "inline" do |f| %>
          <%= f.submit "Manage Users", class: "bg-purple-600 hover:bg-purple-700 text-white font-bold py-3 px-8 rounded-lg transition duration-200 shadow-lg hover:shadow-xl cursor-pointer border-0" %>
        <% end %>
        <%= form_with url: admin_incomes_path, method: :get, local: true, class: "inline" do |f| %>
          <%= f.submit "Manage Incomes", class: "bg-green-600 hover:bg-green-700 text-white font-bold py-3 px-8 rounded-lg transition duration-200 shadow-lg hover:shadow-xl cursor-pointer border-0" %>
        <% end %>
        <%= form_with url: admin_income_events_path, method: :get, local: true, class: "inline" do |f| %>
          <%= f.submit "Manage Income Events", class: "bg-indigo-600 hover:bg-indigo-700 text-white font-bold py-3 px-8 rounded-lg transition duration-200 shadow-lg hover:shadow-xl cursor-pointer border-0" %>
        <% end %>
        <%= form_with url: admin_monthly_budgets_path, method: :get, local: true, class: "inline" do |f| %>
          <%= f.submit "Manage Monthly Budgets", class: "bg-teal-600 hover:bg-teal-700 text-white font-bold py-3 px-8 rounded-lg transition duration-200 shadow-lg hover:shadow-xl cursor-pointer border-0" %>
        <% end %>
        <%= form_with url: admin_envelopes_path, method: :get, local: true, class: "inline" do |f| %>
          <%= f.submit "Manage Envelopes", class: "bg-orange-600 hover:bg-orange-700 text-white font-bold py-3 px-8 rounded-lg transition duration-200 shadow-lg hover:shadow-xl cursor-pointer border-0" %>
        <% end %>
        <%= form_with url: dashboard_path, method: :get, local: true, class: "inline" do |f| %>
          <%= f.submit "Back to Dashboard", class: "bg-gray-500 hover:bg-gray-600 text-white font-bold py-3 px-8 rounded-lg transition duration-200 shadow-lg hover:shadow-xl cursor-pointer border-0" %>
        <% end %>
      </div>
    </div>

    <!-- Recent Activity -->
    <div class="grid grid-cols-1 lg:grid-cols-2 xl:grid-cols-5 gap-8">
      <!-- Recent Users -->
      <div class="bg-white rounded-2xl shadow-2xl p-8">
        <h2 class="text-3xl font-bold text-transparent bg-clip-text bg-gradient-to-r from-purple-600 to-pink-600 mb-6">Recent Users</h2>
        <% if @recent_users.any? %>
          <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-200">
              <thead class="bg-gradient-to-r from-purple-50 to-pink-50">
                <tr>
                  <th class="px-6 py-4 text-left text-xs font-bold text-gray-700 uppercase tracking-wider">Email</th>
                  <th class="px-6 py-4 text-left text-xs font-bold text-gray-700 uppercase tracking-wider">Role</th>
                  <th class="px-6 py-4 text-left text-xs font-bold text-gray-700 uppercase tracking-wider">Actions</th>
                </tr>
              </thead>
              <tbody class="bg-white divide-y divide-gray-100">
                <% @recent_users.each do |user| %>
                  <tr class="hover:bg-purple-50 transition duration-150">
                    <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900"><%= user.email %></td>
                    <td class="px-6 py-4 whitespace-nowrap">
                      <% if user.admin? %>
                        <span class="px-3 py-1 inline-flex text-xs leading-5 font-semibold rounded-full bg-purple-100 text-purple-800 border border-purple-200">Admin</span>
                      <% else %>
                        <span class="px-3 py-1 inline-flex text-xs leading-5 font-semibold rounded-full bg-gray-100 text-gray-800 border border-gray-200">User</span>
                      <% end %>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                      <%= link_to "View", admin_user_path(user), class: "text-purple-600 hover:text-purple-800 font-semibold transition duration-150" %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        <% else %>
          <div class="text-center py-12">
            <p class="text-gray-500 text-lg">No users found.</p>
          </div>
        <% end %>
      </div>

      <!-- Recent Incomes -->
      <div class="bg-white rounded-2xl shadow-2xl p-8">
        <h2 class="text-3xl font-bold text-transparent bg-clip-text bg-gradient-to-r from-purple-600 to-pink-600 mb-6">Recent Incomes</h2>
        <% if @recent_incomes.any? %>
          <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-200">
              <thead class="bg-gradient-to-r from-purple-50 to-pink-50">
                <tr>
                  <th class="px-6 py-4 text-left text-xs font-bold text-gray-700 uppercase tracking-wider">User</th>
                  <th class="px-6 py-4 text-left text-xs font-bold text-gray-700 uppercase tracking-wider">Name</th>
                  <th class="px-6 py-4 text-left text-xs font-bold text-gray-700 uppercase tracking-wider">Amount</th>
                  <th class="px-6 py-4 text-left text-xs font-bold text-gray-700 uppercase tracking-wider">Actions</th>
                </tr>
              </thead>
              <tbody class="bg-white divide-y divide-gray-100">
                <% @recent_incomes.each do |income| %>
                  <tr class="hover:bg-purple-50 transition duration-150">
                    <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                      <%= income.user.email.split("@").first %>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900 font-semibold"><%= income.name %></td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm font-bold text-green-600">
                      $<%= number_with_delimiter(income.estimated_amount, delimiter: ",") %>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                      <%= link_to "View", admin_income_path(income), class: "text-purple-600 hover:text-purple-800 font-semibold transition duration-150" %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        <% else %>
          <div class="text-center py-12">
            <p class="text-gray-500 text-lg">No incomes found.</p>
          </div>
        <% end %>
      </div>

      <!-- Recent Income Events -->
      <div class="bg-white rounded-2xl shadow-2xl p-8">
        <h2 class="text-3xl font-bold text-transparent bg-clip-text bg-gradient-to-r from-indigo-600 to-purple-600 mb-6">Recent Income Events</h2>
        <% if @recent_income_events.any? %>
          <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-200">
              <thead class="bg-gradient-to-r from-indigo-50 to-purple-50">
                <tr>
                  <th class="px-6 py-4 text-left text-xs font-bold text-gray-700 uppercase tracking-wider">User</th>
                  <th class="px-6 py-4 text-left text-xs font-bold text-gray-700 uppercase tracking-wider">Amount</th>
                  <th class="px-6 py-4 text-left text-xs font-bold text-gray-700 uppercase tracking-wider">Actions</th>
                </tr>
              </thead>
              <tbody class="bg-white divide-y divide-gray-100">
                <% @recent_income_events.each do |income_event| %>
                  <tr class="hover:bg-indigo-50 transition duration-150">
                    <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                      <%= income_event.user.display_name.presence || income_event.user.email.split("@").first.capitalize %>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm font-bold text-green-600">
                      $<%= number_with_delimiter(income_event.actual_amount, delimiter: ",") %>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                      <%= link_to "View", admin_income_event_path(income_event), class: "text-indigo-600 hover:text-indigo-800 font-semibold transition duration-150" %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        <% else %>
          <div class="text-center py-12">
            <p class="text-gray-500 text-lg">No income events found.</p>
          </div>
        <% end %>
      </div>

      <!-- Recent Monthly Budgets -->
      <div class="bg-white rounded-2xl shadow-2xl p-8">
        <h2 class="text-3xl font-bold text-transparent bg-clip-text bg-gradient-to-r from-teal-600 to-blue-600 mb-6">Recent Monthly Budgets</h2>
        <% if @recent_monthly_budgets.any? %>
          <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-200">
              <thead class="bg-gradient-to-r from-teal-50 to-blue-50">
                <tr>
                  <th class="px-6 py-4 text-left text-xs font-bold text-gray-700 uppercase tracking-wider">User</th>
                  <th class="px-6 py-4 text-left text-xs font-bold text-gray-700 uppercase tracking-wider">Month</th>
                  <th class="px-6 py-4 text-left text-xs font-bold text-gray-700 uppercase tracking-wider">Actions</th>
                </tr>
              </thead>
              <tbody class="bg-white divide-y divide-gray-100">
                <% @recent_monthly_budgets.each do |budget| %>
                  <tr class="hover:bg-teal-50 transition duration-150">
                    <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                      <%= budget.user.display_name.presence || budget.user.email.split("@").first.capitalize %>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm font-semibold text-gray-900">
                      <%= budget.month_year %>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                      <%= link_to "View", admin_monthly_budget_path(budget), class: "text-teal-600 hover:text-teal-800 font-semibold transition duration-150" %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        <% else %>
          <div class="text-center py-12">
            <p class="text-gray-500 text-lg">No monthly budgets found.</p>
          </div>
        <% end %>
      </div>

      <!-- Recent Envelopes -->
      <div class="bg-white rounded-2xl shadow-2xl p-8">
        <h2 class="text-3xl font-bold text-transparent bg-clip-text bg-gradient-to-r from-orange-600 to-red-600 mb-6">Recent Envelopes</h2>
        <% if @recent_envelopes.any? %>
          <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-200">
              <thead class="bg-gradient-to-r from-orange-50 to-red-50">
                <tr>
                  <th class="px-6 py-4 text-left text-xs font-bold text-gray-700 uppercase tracking-wider">Name</th>
                  <th class="px-6 py-4 text-left text-xs font-bold text-gray-700 uppercase tracking-wider">Budget</th>
                  <th class="px-6 py-4 text-left text-xs font-bold text-gray-700 uppercase tracking-wider">Actions</th>
                </tr>
              </thead>
              <tbody class="bg-white divide-y divide-gray-100">
                <% @recent_envelopes.each do |envelope| %>
                  <tr class="hover:bg-orange-50 transition duration-150">
                    <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                      <%= envelope.spending_group_name %>
                      <% if envelope.is_savings? %>
                        <span class="ml-2 text-xs bg-blue-100 text-blue-800 px-2 py-1 rounded-full">Savings</span>
                      <% end %>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm font-semibold text-gray-900">
                      <%= envelope.monthly_budget.month_year %>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                      <%= link_to "View", admin_envelope_path(envelope), class: "text-orange-600 hover:text-orange-800 font-semibold transition duration-150" %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        <% else %>
          <div class="text-center py-12">
            <p class="text-gray-500 text-lg">No envelopes found.</p>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

