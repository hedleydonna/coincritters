<div class="min-h-screen bg-gray-50">
  <div class="max-w-2xl mx-auto py-8 px-4">
    <div class="mb-8 flex justify-between items-center">
      <div>
        <h1 class="text-4xl font-bold text-transparent bg-clip-text bg-gradient-to-r from-purple-600 to-pink-600">
          New Envelope
        </h1>
        <p class="text-gray-600 mt-2">Create a new envelope</p>
      </div>
      <%= link_to "â† Back to Envelopes", admin_envelopes_path, class: "text-purple-600 hover:text-purple-700 font-medium" %>
    </div>

    <div class="bg-white rounded-xl shadow-lg p-8">
      <%= form_with(model: [:admin, @envelope], class: "space-y-6") do |f| %>
        <%= render "devise/shared/error_messages", resource: @envelope %>

        <div class="field">
          <%= f.label :monthly_budget_id, "Monthly Budget", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.collection_select :monthly_budget_id, @monthly_budgets, :id, :month_year_with_user, { prompt: "Select a monthly budget" }, class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-purple-500 focus:border-purple-500" %>
        </div>

        <div class="field">
          <%= f.label :envelope_template_id, "Envelope Template", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.collection_select :envelope_template_id, @envelope_templates, :id, :display_name, { prompt: "Select an envelope template" }, class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-purple-500 focus:border-purple-500" %>
          <p class="mt-1 text-sm text-gray-500">The template provides the name, group type (fixed/variable), savings status, and default amount. You can override the name below if needed.</p>
        </div>

        <div class="field">
          <%= f.label :allotted_amount, "Allotted Amount", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.number_field :allotted_amount, step: "0.01", class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-purple-500 focus:border-purple-500" %>
          <p class="mt-1 text-sm text-gray-500">How much the user assigned to this envelope this month. If left blank, will use the template's default amount.</p>
        </div>

        <div class="border-t pt-6 mt-6">
          <h3 class="text-lg font-semibold text-gray-800 mb-4">Override Name (Optional)</h3>
          <p class="text-sm text-gray-600 mb-4">You can customize the name for this specific envelope. Leave blank to use the template name.</p>

          <div class="field">
            <%= f.label :name, "Custom Name", class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= f.text_field :name, class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-purple-500 focus:border-purple-500", placeholder: "Leave blank to use template name" %>
            <p class="mt-1 text-sm text-gray-500">Override the template name for this envelope</p>
          </div>
        </div>

        <div class="actions">
          <%= f.submit "Create Envelope", class: "w-full bg-purple-600 hover:bg-purple-700 text-white font-bold py-3 px-6 rounded-lg transition duration-200 shadow-lg hover:shadow-xl cursor-pointer" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
