<div class="min-h-screen bg-gray-50">
  <div class="max-w-2xl mx-auto py-8 px-4">
    <div class="mb-8 flex justify-between items-center">
      <div>
        <h1 class="text-4xl font-bold text-transparent bg-clip-text bg-gradient-to-r from-purple-600 to-pink-600">
          Edit Envelope
        </h1>
        <p class="text-gray-600 mt-2">Editing envelope: <%= @envelope.spending_group_name %></p>
      </div>
      <%= link_to "â† Back to Envelope", admin_envelope_path(@envelope), class: "text-purple-600 hover:text-purple-700 font-medium" %>
    </div>

    <div class="bg-white rounded-xl shadow-lg p-8">
      <%= form_with(model: [:admin, @envelope], class: "space-y-6") do |f| %>
        <%= render "devise/shared/error_messages", resource: @envelope %>

        <div class="field">
          <%= f.label :monthly_budget_id, "Monthly Budget", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.collection_select :monthly_budget_id, @monthly_budgets, :id, :month_year_with_user, { prompt: "Select a monthly budget" }, class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-purple-500 focus:border-purple-500" %>
        </div>

        <div class="field">
          <%= f.label :spending_category_id, "Spending Category", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.collection_select :spending_category_id, @spending_categories, :id, :display_name, { prompt: "Select a spending category" }, class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-purple-500 focus:border-purple-500" %>
          <p class="mt-1 text-sm text-gray-500">The category defines the group type (fixed/variable) and savings status</p>
        </div>

        <div class="field">
          <%= f.label :spending_group_name, "Spending Group Name", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.text_field :spending_group_name, placeholder: "e.g., Groceries, Rent, Entertainment", class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-purple-500 focus:border-purple-500" %>
          <p class="mt-1 text-sm text-gray-500">User-typed label for this spending category</p>
        </div>

        <div class="field">
          <%= f.label :allotted_amount, "Allotted Amount", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.number_field :allotted_amount, step: "0.01", class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-purple-500 focus:border-purple-500" %>
          <p class="mt-1 text-sm text-gray-500">How much the user assigned to this envelope this month</p>
        </div>

        <div class="field">
          <%= f.label :spent_amount, "Spent Amount", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.number_field :spent_amount, step: "0.01", class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-purple-500 focus:border-purple-500" %>
          <p class="mt-1 text-sm text-gray-500">How much has been spent from this envelope (updated live)</p>
        </div>

        <div class="actions">
          <%= f.submit "Update Envelope", class: "w-full bg-purple-600 hover:bg-purple-700 text-white font-bold py-3 px-6 rounded-lg transition duration-200 shadow-lg hover:shadow-xl cursor-pointer" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

