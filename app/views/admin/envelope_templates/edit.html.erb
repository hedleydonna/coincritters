<div class="min-h-screen bg-gradient-to-br from-purple-600 to-pink-600 py-12 px-4">
  <div class="max-w-2xl mx-auto">
    <div class="mb-8 flex justify-between items-center">
      <h1 class="text-5xl font-bold text-white mb-2">Edit Envelope Template</h1>
      <%= link_to "â† Back to Template", admin_envelope_template_path(@envelope_template), class: "text-white hover:text-purple-200 font-medium" %>
    </div>

    <div class="bg-white rounded-2xl shadow-2xl p-8">
      <%= form_with model: [:admin, @envelope_template], local: true do |f| %>
        <% if @envelope_template.errors.any? %>
          <div class="mb-6 p-4 bg-red-100 border border-red-400 text-red-700 rounded-lg">
            <h3 class="font-bold mb-2"><%= pluralize(@envelope_template.errors.count, "error") %> prohibited this template from being saved:</h3>
            <ul class="list-disc list-inside">
              <% @envelope_template.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="space-y-6">
          <div>
            <%= f.label :user_id, "User", class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= f.collection_select :user_id, @users, :id, :email, {},
                { class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent" } %>
          </div>

          <div>
            <%= f.label :name, "Template Name", class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= f.text_field :name, class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent" %>
          </div>

          <div>
            <%= f.label :group_type, "Group Type", class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= f.select :group_type, [["Fixed", "fixed"], ["Variable", "variable"]], {},
                { class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent" } %>
            <p class="mt-1 text-sm text-gray-500">Fixed = recurring bills (rent, Netflix), Variable = flexible spending (food, fun)</p>
          </div>

          <div>
            <div class="flex items-center">
              <%= f.check_box :is_savings, class: "h-4 w-4 text-purple-600 focus:ring-purple-500 border-gray-300 rounded" %>
              <%= f.label :is_savings, "Is Savings Pot", class: "ml-2 block text-sm text-gray-700" %>
            </div>
            <p class="mt-1 text-sm text-gray-500">Check if this is a savings pot (emergency fund, vacation, etc.)</p>
          </div>

          <div>
            <%= f.label :default_amount, "Default Amount (optional)", class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= f.number_field :default_amount, step: 0.01, min: 0, class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent" %>
            <p class="mt-1 text-sm text-gray-500">Default amount to allocate when creating envelopes from this template</p>
          </div>

          <div>
            <div class="flex items-center">
              <%= f.check_box :auto_create, class: "h-4 w-4 text-purple-600 focus:ring-purple-500 border-gray-300 rounded" %>
              <%= f.label :auto_create, "Auto-Create Envelopes", class: "ml-2 block text-sm text-gray-700" %>
            </div>
            <p class="mt-1 text-sm text-gray-500">Automatically create envelopes from this template in monthly budgets</p>
          </div>
        </div>

        <div class="mt-8 flex gap-4">
          <%= f.submit "Update Template", class: "bg-purple-600 hover:bg-purple-700 text-white font-bold py-3 px-6 rounded-lg transition duration-200 shadow-lg hover:shadow-xl" %>
          <%= link_to "Cancel", admin_envelope_template_path(@envelope_template), class: "bg-gray-500 hover:bg-gray-600 text-white font-bold py-3 px-6 rounded-lg transition duration-200 shadow-lg hover:shadow-xl" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

