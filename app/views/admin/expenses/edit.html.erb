<div class="min-h-screen bg-gray-50">
  <div class="max-w-2xl mx-auto py-8 px-4">
    <div class="mb-8 flex justify-between items-center">
      <div>
        <h1 class="text-4xl font-bold text-transparent bg-clip-text bg-gradient-to-r from-purple-600 to-pink-600">
          Edit Expense
        </h1>
        <p class="text-gray-600 mt-2">Editing expense: <%= @expense.name %></p>
      </div>
      <%= link_to "â† Back to Expense", admin_expense_path(@expense), class: "text-purple-600 hover:text-purple-700 font-medium" %>
    </div>

    <div class="bg-white rounded-xl shadow-lg p-8">
      <%= form_with(model: [:admin, @expense], class: "space-y-6") do |f| %>
        <%= render "devise/shared/error_messages", resource: @expense %>

        <div class="field">
          <%= f.label :monthly_budget_id, "Monthly Budget", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.collection_select :monthly_budget_id, @monthly_budgets, :id, :month_year_with_user, { prompt: "Select a monthly budget" }, class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-purple-500 focus:border-purple-500" %>
        </div>

        <div class="field">
          <%= f.label :expense_template_id, "Expense Template", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.collection_select :expense_template_id, @expense_templates, :id, :display_name, { prompt: "Select an expense template" }, class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-purple-500 focus:border-purple-500" %>
        </div>

        <div class="field">
          <%= f.label :allotted_amount, "Allotted Amount", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.number_field :allotted_amount, step: "0.01", class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-purple-500 focus:border-purple-500" %>
          <p class="mt-1 text-sm text-gray-500">Amount allocated for this expense</p>
        </div>

        <div class="field">
          <%= f.label :name, "Name Override (optional)", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.text_field :name, class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-purple-500 focus:border-purple-500" %>
          <p class="mt-1 text-sm text-gray-500">Optional: Override the template name for this specific expense</p>
        </div>

        <div class="actions">
          <%= f.submit "Update Expense", class: "w-full bg-purple-600 hover:bg-purple-700 text-white font-bold py-3 px-6 rounded-lg transition duration-200 shadow-lg hover:shadow-xl cursor-pointer" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

