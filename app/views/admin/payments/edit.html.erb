<div class="min-h-screen bg-gray-50">
  <div class="max-w-2xl mx-auto py-8 px-4">
    <div class="mb-8 flex justify-between items-center">
      <div>
        <h1 class="text-4xl font-bold text-transparent bg-clip-text bg-gradient-to-r from-purple-600 to-pink-600">
          Edit Payment
        </h1>
        <p class="text-gray-600 mt-2">Editing payment on <%= @payment.spent_on.strftime("%B %d, %Y") %></p>
      </div>
      <%= link_to "â† Back to Payment", admin_payment_path(@payment), class: "text-purple-600 hover:text-purple-700 font-medium" %>
    </div>

    <div class="bg-white rounded-xl shadow-lg p-8">
      <%= form_with(model: [:admin, @payment], class: "space-y-6") do |f| %>
        <%= render "devise/shared/error_messages", resource: @payment %>

        <div class="field">
          <%= f.label :expense_id, "Expense", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.collection_select :expense_id, @expenses, :id, :display_name_with_budget, { prompt: "Select an expense" }, class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-purple-500 focus:border-purple-500" %>
        </div>

        <div class="field">
          <%= f.label :amount, "Amount", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.number_field :amount, step: "0.01", class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-purple-500 focus:border-purple-500" %>
        </div>

        <div class="field">
          <%= f.label :spent_on, "Date", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.date_field :spent_on, class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-purple-500 focus:border-purple-500" %>
        </div>

        <div class="field">
          <%= f.label :notes, "Notes (optional)", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.text_area :notes, rows: 3, class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-purple-500 focus:border-purple-500" %>
        </div>

        <div class="actions">
          <%= f.submit "Update Payment", class: "w-full bg-purple-600 hover:bg-purple-700 text-white font-bold py-3 px-6 rounded-lg transition duration-200 shadow-lg hover:shadow-xl cursor-pointer" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

