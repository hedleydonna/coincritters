<div class="min-h-screen bg-gray-50">
  <div class="max-w-7xl mx-auto py-8 px-4">
    <div class="mb-8 flex justify-between items-center">
      <div>
        <h1 class="text-4xl font-bold text-transparent bg-clip-text bg-gradient-to-r from-purple-600 to-pink-600">
          Manage Bill Payments
        </h1>
        <p class="text-gray-600 mt-2">View and manage all bill payment records</p>
      </div>
      <div class="flex gap-4">
        <%= link_to "New Bill Payment", new_admin_bill_payment_path, class: "bg-purple-600 hover:bg-purple-700 text-white font-bold py-2 px-4 rounded-lg transition duration-200 shadow-lg hover:shadow-xl" %>
        <%= link_to "â† Back to Admin Dashboard", admin_root_path, class: "text-purple-600 hover:text-purple-700 font-medium" %>
      </div>
    </div>

    <div class="bg-white rounded-xl shadow-lg p-6 mb-6">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <div class="bg-gradient-to-r from-purple-50 to-pink-50 rounded-lg p-4">
          <h3 class="text-sm font-medium text-gray-500 uppercase tracking-wide mb-2">Total Payments</h3>
          <p class="text-3xl font-bold text-purple-600"><%= @total_payments %></p>
        </div>
        <div class="bg-gradient-to-r from-green-50 to-teal-50 rounded-lg p-4">
          <h3 class="text-sm font-medium text-gray-500 uppercase tracking-wide mb-2">Total Amount</h3>
          <p class="text-3xl font-bold text-green-600">$<%= number_with_delimiter(@total_amount, delimiter: ",") %></p>
        </div>
      </div>
    </div>

    <div class="bg-white rounded-xl shadow-lg p-6">
      <% if @bill_payments.any? %>
        <div class="overflow-x-auto">
          <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
              <tr>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Date</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Envelope</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">User</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Amount</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Notes</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
              </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
              <% @bill_payments.each do |bill_payment| %>
                <tr>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900"><%= bill_payment.paid_on.strftime("%b %d, %Y") %></td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900 font-semibold"><%= bill_payment.spending_group_name %></td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500"><%= bill_payment.user.display_name.presence || bill_payment.user.email.split("@").first.capitalize %></td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-green-600 font-semibold">$<%= number_with_delimiter(bill_payment.actual_paid_amount, delimiter: ",") %></td>
                  <td class="px-6 py-4 text-sm text-gray-500"><%= truncate(bill_payment.notes, length: 50) if bill_payment.notes.present? %></td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                    <%= link_to "View", admin_bill_payment_path(bill_payment), class: "text-blue-600 hover:text-blue-900 mr-3" %>
                    <%= link_to "Edit", edit_admin_bill_payment_path(bill_payment), class: "text-purple-600 hover:text-purple-900 mr-3" %>
                    <%= button_to "Delete", admin_bill_payment_path(bill_payment), method: :delete,
                        data: { confirm: "Are you sure you want to delete this bill payment?", turbo_confirm: "Are you sure you want to delete this bill payment?" },
                        form: { style: "display: inline-block; margin: 0;" },
                        class: "text-red-600 hover:text-red-900 bg-transparent border-0 p-0 cursor-pointer" %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      <% else %>
        <p class="text-gray-500">No bill payment records found.</p>
      <% end %>
    </div>
  </div>
</div>

