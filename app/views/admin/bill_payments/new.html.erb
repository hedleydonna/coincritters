<div class="min-h-screen bg-gray-50">
  <div class="max-w-2xl mx-auto py-8 px-4">
    <div class="mb-8 flex justify-between items-center">
      <div>
        <h1 class="text-4xl font-bold text-transparent bg-clip-text bg-gradient-to-r from-purple-600 to-pink-600">
          New Bill Payment
        </h1>
        <p class="text-gray-600 mt-2">Create a new bill payment record</p>
      </div>
      <%= link_to "â† Back to Bill Payments", admin_bill_payments_path, class: "text-purple-600 hover:text-purple-700 font-medium" %>
    </div>

    <div class="bg-white rounded-xl shadow-lg p-8">
      <%= form_with(model: [:admin, @bill_payment], class: "space-y-6") do |f| %>
        <% if @bill_payment.errors.any? %>
          <div class="mb-6 p-4 bg-red-100 border border-red-400 text-red-700 rounded-lg">
            <h3 class="font-bold mb-2"><%= pluralize(@bill_payment.errors.count, "error") %> prohibited this bill payment from being saved:</h3>
            <ul class="list-disc list-inside">
              <% @bill_payment.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="field">
          <%= f.label :envelope_id, "Envelope", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.collection_select :envelope_id, @envelopes, :id, :display_name_with_budget, { prompt: "Select an envelope" }, class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-purple-500 focus:border-purple-500" %>
          <p class="mt-1 text-sm text-gray-500">The spending group name will come from the selected envelope</p>
        </div>

        <div class="field">
          <%= f.label :actual_paid_amount, "Amount Paid", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.number_field :actual_paid_amount, step: "0.01", min: "0.01", class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-purple-500 focus:border-purple-500" %>
          <p class="mt-1 text-sm text-gray-500">Actual amount paid (must be greater than 0)</p>
        </div>

        <div class="field">
          <%= f.label :paid_on, "Date Paid", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.date_field :paid_on, value: Date.today, class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-purple-500 focus:border-purple-500" %>
          <p class="mt-1 text-sm text-gray-500">Date when the payment was made</p>
        </div>

        <div class="field">
          <%= f.label :notes, "Notes (optional)", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.text_area :notes, rows: 3, placeholder: "Add any notes about this payment...", class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-purple-500 focus:border-purple-500" %>
        </div>

        <div class="actions">
          <%= f.submit "Create Bill Payment", class: "w-full bg-purple-600 hover:bg-purple-700 text-white font-bold py-3 px-6 rounded-lg transition duration-200 shadow-lg hover:shadow-xl cursor-pointer" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

