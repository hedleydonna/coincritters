<div class="min-h-screen bg-gray-50">
  <div class="max-w-7xl mx-auto py-8 px-4">
    <div class="mb-8 flex justify-between items-center">
      <div>
        <h1 class="text-4xl font-bold text-transparent bg-clip-text bg-gradient-to-r from-purple-600 to-pink-600">
          Manage Monthly Budgets
        </h1>
        <p class="text-gray-600 mt-2">View and manage all monthly budget records</p>
      </div>
      <div class="flex gap-4">
        <%= link_to "New Monthly Budget", new_admin_monthly_budget_path, class: "bg-purple-600 hover:bg-purple-700 text-white font-bold py-2 px-4 rounded-lg transition duration-200 shadow-lg hover:shadow-xl" %>
        <%= link_to "← Back to Admin Dashboard", admin_root_path, class: "text-purple-600 hover:text-purple-700 font-medium" %>
      </div>
    </div>

    <div class="bg-white rounded-xl shadow-lg p-6 mb-6">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <div class="bg-gradient-to-r from-purple-50 to-pink-50 rounded-lg p-4">
          <h3 class="text-sm font-medium text-gray-500 uppercase tracking-wide mb-2">Total Budgets</h3>
          <p class="text-3xl font-bold text-purple-600"><%= @total_budgets %></p>
        </div>
      </div>
    </div>

    <div class="bg-white rounded-xl shadow-lg p-6">
      <% if @monthly_budgets.any? %>
        <div class="overflow-x-auto">
          <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
              <tr>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">User</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Month/Year</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Total Income</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Flex Fund</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Bank Balance</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
              </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
              <% @monthly_budgets.each do |budget| %>
                <tr>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900"><%= budget.user.display_name.presence || budget.user.email.split("@").first.capitalize %></td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500 font-semibold"><%= budget.month_year %></td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-green-600 font-semibold">$<%= number_with_delimiter(budget.total_actual_income, delimiter: ",") %></td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-blue-600 font-semibold">$<%= number_with_delimiter(budget.flex_fund, delimiter: ",") %></td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-600"><%= budget.bank_balance ? "$#{number_with_delimiter(budget.bank_balance, delimiter: ',')}" : "—" %></td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                    <%= link_to "View", admin_monthly_budget_path(budget), class: "text-blue-600 hover:text-blue-900 mr-3" %>
                    <%= link_to "Edit", edit_admin_monthly_budget_path(budget), class: "text-purple-600 hover:text-purple-900 mr-3" %>
                    <%= button_to "Delete", admin_monthly_budget_path(budget), method: :delete,
                        data: { confirm: "Are you sure you want to delete this monthly budget?", turbo_confirm: "Are you sure you want to delete this monthly budget?" },
                        form: { style: "display: inline-block; margin: 0;" },
                        class: "text-red-600 hover:text-red-900 bg-transparent border-0 p-0 cursor-pointer" %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      <% else %>
        <p class="text-gray-500">No monthly budget records found.</p>
      <% end %>
    </div>
  </div>
</div>

