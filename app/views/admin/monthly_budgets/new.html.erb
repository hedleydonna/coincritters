<div class="min-h-screen bg-gray-50">
  <div class="max-w-2xl mx-auto py-8 px-4">
    <div class="mb-8 flex justify-between items-center">
      <div>
        <h1 class="text-4xl font-bold text-transparent bg-clip-text bg-gradient-to-r from-purple-600 to-pink-600">
          New Monthly Budget
        </h1>
        <p class="text-gray-600 mt-2">Create a new monthly budget</p>
      </div>
      <%= link_to "â† Back to Monthly Budgets", admin_monthly_budgets_path, class: "text-purple-600 hover:text-purple-700 font-medium" %>
    </div>

    <div class="bg-white rounded-xl shadow-lg p-8">
      <%= form_with(model: [:admin, @monthly_budget], class: "space-y-6") do |f| %>
        <%= render "devise/shared/error_messages", resource: @monthly_budget %>

        <div class="field">
          <%= f.label :user_id, "User", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.collection_select :user_id, @users, :id, :email, { prompt: "Select a user" }, class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-purple-500 focus:border-purple-500" %>
        </div>

        <div class="field">
          <%= f.label :month_year, "Month/Year (YYYY-MM)", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.text_field :month_year, placeholder: "2025-12", class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-purple-500 focus:border-purple-500" %>
          <p class="mt-1 text-sm text-gray-500">Format: YYYY-MM (e.g., 2025-12)</p>
        </div>

        <div class="field">
          <%= f.label :total_actual_income, "Total Actual Income", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.number_field :total_actual_income, step: "0.01", class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-purple-500 focus:border-purple-500" %>
          <p class="mt-1 text-sm text-gray-500">Total actual income assigned to this month from income events</p>
        </div>

        <div class="field">
          <%= f.label :flex_fund, "Flex Fund", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.number_field :flex_fund, step: "0.01", class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-purple-500 focus:border-purple-500" %>
          <p class="mt-1 text-sm text-gray-500">Leftover/unassigned money (your flex fund)</p>
        </div>

        <div class="field">
          <%= f.label :bank_balance, "Bank Balance (optional)", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.number_field :bank_balance, step: "0.01", class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-purple-500 focus:border-purple-500" %>
          <p class="mt-1 text-sm text-gray-500">Optional: manually entered bank balance for verification</p>
        </div>

        <div class="actions">
          <%= f.submit "Create Monthly Budget", class: "w-full bg-purple-600 hover:bg-purple-700 text-white font-bold py-3 px-6 rounded-lg transition duration-200 shadow-lg hover:shadow-xl cursor-pointer" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

