<div class="min-h-screen bg-gray-50">
  <div class="max-w-4xl mx-auto py-8 px-4">
    <div class="mb-8 flex justify-between items-center">
      <div>
        <h1 class="text-4xl font-bold text-transparent bg-clip-text bg-gradient-to-r from-purple-600 to-pink-600">
          Monthly Budget Details
        </h1>
        <p class="text-gray-600 mt-2">Details for monthly budget: <%= @monthly_budget.month_year %></p>
      </div>
      <%= link_to "← Back to Monthly Budgets", admin_monthly_budgets_path, class: "text-purple-600 hover:text-purple-700 font-medium" %>
    </div>

    <div class="bg-white rounded-xl shadow-lg p-8 mb-8">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div>
          <p class="text-sm font-medium text-gray-500">User</p>
          <p class="mt-1 text-lg text-gray-900"><%= @monthly_budget.user.display_name.presence || @monthly_budget.user.email.split("@").first.capitalize %></p>
        </div>
        <div>
          <p class="text-sm font-medium text-gray-500">Month/Year</p>
          <p class="mt-1 text-lg text-gray-900 font-semibold"><%= @monthly_budget.month_year %></p>
        </div>
        <div>
          <p class="text-sm font-medium text-gray-500">Total Actual Income</p>
          <p class="mt-1 text-2xl font-bold text-green-600">$<%= number_with_delimiter(@monthly_budget.total_actual_income, delimiter: ",") %></p>
        </div>
        <div>
          <p class="text-sm font-medium text-gray-500">Flex Fund</p>
          <p class="mt-1 text-2xl font-bold text-blue-600">$<%= number_with_delimiter(@monthly_budget.flex_fund, delimiter: ",") %></p>
        </div>
        <div>
          <p class="text-sm font-medium text-gray-500">Bank Balance</p>
          <p class="mt-1 text-lg text-gray-900"><%= @monthly_budget.bank_balance ? "$#{number_with_delimiter(@monthly_budget.bank_balance, delimiter: ',')}" : "—" %></p>
        </div>
        <div>
          <p class="text-sm font-medium text-gray-500">Created At</p>
          <p class="mt-1 text-lg text-gray-900"><%= @monthly_budget.created_at.strftime("%b %d, %Y %H:%M") %></p>
        </div>
        <div>
          <p class="text-sm font-medium text-gray-500">Last Updated</p>
          <p class="mt-1 text-lg text-gray-900"><%= @monthly_budget.updated_at.strftime("%b %d, %Y %H:%M") %></p>
        </div>
      </div>
    </div>

    <div class="flex justify-between gap-4">
      <div>
        <%= link_to "New Monthly Budget", new_admin_monthly_budget_path, class: "bg-green-600 hover:bg-green-700 text-white font-bold py-2 px-4 rounded-lg transition duration-200 shadow-lg hover:shadow-xl" %>
      </div>
      <div class="flex gap-4">
        <%= link_to "Edit Monthly Budget", edit_admin_monthly_budget_path(@monthly_budget), class: "bg-purple-600 hover:bg-purple-700 text-white font-bold py-2 px-4 rounded-lg" %>
        <%= button_to "Delete Monthly Budget", admin_monthly_budget_path(@monthly_budget), method: :delete,
                    data: { confirm: "Are you sure you want to delete this monthly budget? This action cannot be undone.", turbo_confirm: "Are you sure you want to delete this monthly budget? This action cannot be undone." },
                    form: { data: { turbo_confirm: "Are you sure you want to delete this monthly budget? This action cannot be undone." } },
                    class: "bg-red-500 hover:bg-red-600 text-white font-bold py-2 px-4 rounded-lg" %>
      </div>
    </div>
  </div>
</div>

