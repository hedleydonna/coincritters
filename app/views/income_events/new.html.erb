<div class="max-w-2xl mx-auto py-8 px-4" 
     data-controller="recurring-toggle swipe-back"
     data-swipe-back-back-url-value="<%= case @return_to
                                          when 'money_map'
                                            money_map_path(scroll_to: 'money-in-section')
                                          else
                                            income_events_path
                                          end %>"
     data-action="touchstart->swipe-back#touchStart touchmove->swipe-back#touchMove touchend->swipe-back#touchEnd">
  <div class="mb-6">
    <h1 class="text-3xl font-bold text-gray-900 mb-2">Add Income</h1>
    <p class="text-gray-600 mb-4">Record money you received or create a recurring income source</p>
    <%= link_to "â† Back to #{@return_to == 'money_map' ? 'Money Map' : 'Money In'}", @return_to == 'money_map' ? money_map_path(scroll_to: 'money-in-section') : income_events_path, class: "text-gray-600 hover:text-gray-900 font-medium" %>
  </div>

  <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-8">
    <%= form_with model: @income_event, url: income_events_path, class: "space-y-6" do |f| %>
      <%= hidden_field_tag :return_to, @return_to if @return_to.present? %>
      
      <% if @income_event.errors.any? %>
        <div class="bg-red-50 border border-red-200 rounded-lg p-4 mb-6">
          <h3 class="text-red-800 font-semibold mb-2">
            <%= pluralize(@income_event.errors.count, "error") %> prevented this income from being saved:
          </h3>
          <ul class="list-disc list-inside text-red-700 space-y-1">
            <% @income_event.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <!-- Name/Label -->
      <div>
        <%= f.label :custom_label, "What is this income for?", class: "block text-sm font-medium text-gray-700 mb-2" do %>
          Income Name <span class="text-red-500">*</span>
        <% end %>
        <%= f.text_field :custom_label, 
              placeholder: "e.g., Salary, Bonus, Freelance work, Birthday gift",
              required: true,
              autofocus: true,
              class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-green-500" %>
        <p class="mt-1 text-sm text-gray-500">A name or description for this income</p>
      </div>

      <!-- Amount field (stays in place, label changes based on recurring) -->
      <div data-recurring-toggle-target="amountField">
        <label for="amount_input" class="block text-sm font-medium text-gray-700 mb-2" data-recurring-toggle-target="amountLabel">
          <span data-recurring-toggle-target="amountLabelText">Amount</span> <span class="text-red-500" data-recurring-toggle-target="amountRequired">*</span>
        </label>
        <div class="relative">
          <span class="absolute left-3 top-2 text-gray-500 text-lg">$</span>
          <%= f.number_field :actual_amount, 
                id: "amount_input",
                step: "0.01", 
                min: "0",
                placeholder: "0.00",
                value: nil,
                required: true,
                data: { 
                  controller: "select-on-focus",
                  recurring_toggle_target: "amountInput",
                  one_off_name: "income_event[actual_amount]",
                  recurring_name: "estimated_amount"
                },
                class: "w-full px-4 py-3 pl-8 text-lg border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-green-500" %>
        </div>
        <p class="mt-1 text-sm text-gray-500" data-recurring-toggle-target="amountHelpText">The actual amount you received</p>
      </div>

      <!-- Date field (always visible, label changes based on frequency) -->
      <div data-recurring-toggle-target="dateField">
        <label for="date_input" class="block text-sm font-medium text-gray-700 mb-2" data-recurring-toggle-target="dateLabel">
          <span data-recurring-toggle-target="dateLabelText">Date</span> <span class="text-red-500" data-recurring-toggle-target="dateRequired">*</span>
        </label>
        <%= f.date_field :received_on, 
              id: "date_input",
              value: @income_event.received_on || Date.today,
              required: true,
              data: { 
                recurring_toggle_target: "dateInput",
                one_off_name: "income_event[received_on]",
                recurring_name: "due_date"
              },
              class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-green-500" %>
        <p class="mt-1 text-sm text-gray-500" data-recurring-toggle-target="dateHelpText">Defaults to today's date</p>
      </div>

      <!-- Frequency (always visible) -->
      <div>
        <label for="frequency" class="block text-sm font-medium text-gray-700 mb-2">
          How often? <span class="text-red-500">*</span>
        </label>
        <% frequency_value = (@preserved_params && @preserved_params[:frequency]) || params[:frequency] || "just_once" %>
        <%= select_tag :frequency, 
              options_for_select([
                ["Just once", "just_once"], 
                ["Monthly", "monthly"], 
                ["Bi-weekly", "bi_weekly"],
                ["Weekly", "weekly"],
                ["Irregular", "irregular"]
              ], frequency_value),
              { 
                id: "frequency",
                data: { 
                  action: "change->recurring-toggle#toggle",
                  recurring_toggle_target: "frequencySelect"
                },
                required: true,
                class: "w-full border border-gray-300 rounded-lg px-4 py-2 focus:ring-2 focus:ring-green-500 focus:border-green-500" } %>
        <p class="mt-1 text-sm text-gray-500">Select "Just once" for a one-time income, or choose a frequency for recurring income</p>
      </div>

      <!-- Notes -->
      <div>
        <%= f.label :notes, "Notes (optional)", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= f.text_area :notes, 
              rows: 3,
              placeholder: "Optional notes about this income...",
              class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-green-500" %>
      </div>

      <div class="flex gap-4 pt-4">
        <%= f.submit "Add Income", 
              class: "bg-green-600 hover:bg-green-700 text-white font-semibold px-6 py-3 rounded-lg transition-colors cursor-pointer flex-1" %>
        <%= link_to "Cancel", @return_to == 'money_map' ? money_map_path(scroll_to: 'money-in-section') : income_events_path, 
              class: "bg-gray-200 hover:bg-gray-300 text-gray-700 font-semibold px-6 py-3 rounded-lg transition-colors" %>
      </div>
    <% end %>
  </div>
</div>

