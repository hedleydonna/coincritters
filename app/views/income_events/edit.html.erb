<div class="max-w-2xl mx-auto py-8 px-4 w-full overflow-x-hidden" 
     data-controller="swipe-back" 
     data-swipe-back-back-url-value="<%= case @return_to
                                          when 'money_map'
                                            money_map_path(scroll_to: 'money-in-section')
                                          when 'income_templates'
                                            income_templates_path(return_to: @return_to)
                                          else
                                            income_events_path
                                          end %>"
     data-action="touchstart->swipe-back#touchStart touchmove->swipe-back#touchMove touchend->swipe-back#touchEnd">
  
  <% back_path = case @return_to
                  when 'money_map'
                    money_map_path(scroll_to: 'money-in-section')
                  when 'income_templates'
                    income_templates_path(return_to: @return_to)
                  else
                    income_events_path
                  end %>

  <div class="mb-6">
    <h1 class="text-2xl sm:text-3xl font-bold text-gray-900 mb-2 break-words">Edit <%= @income_event.display_name %></h1>
    <% if @income_event.actual_amount > 0 %>
      <p class="text-gray-600 mb-2">Received: <span class="font-semibold text-green-600"><%= number_to_currency(@income_event.actual_amount) %></span></p>
    <% end %>
  </div>

  <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-4 sm:p-8 w-full">
    <%= form_with model: @income_event, url: income_event_path(@income_event), method: :patch, class: "space-y-6" do |f| %>
      <%= hidden_field_tag :return_to, @return_to if @return_to.present? %>
      
      <% if @income_event.errors.any? %>
        <div class="bg-red-50 border border-red-200 rounded-lg p-4 mb-6">
          <h3 class="text-red-800 font-semibold mb-2">
            <%= pluralize(@income_event.errors.count, "error") %> prevented this income from being saved:
          </h3>
          <ul class="list-disc list-inside text-red-700 space-y-1">
            <% @income_event.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <%= render "form", form: f, income_event: @income_event, 
            label_text: "Income Name",
            required: false,
            placeholder_text: "e.g., Paycheck, Bonus, Freelance",
            help_text: "Optional name for this income entry" %>

      <div class="flex flex-col sm:flex-row gap-4 pt-4">
        <%= f.submit "Update Income", 
              class: "bg-green-600 hover:bg-green-700 text-white font-semibold px-6 py-3 rounded-lg transition-colors cursor-pointer flex-1 w-full sm:w-auto" %>
        <%= link_to "Cancel", back_path, 
              class: "bg-gray-200 hover:bg-gray-300 text-gray-700 font-semibold px-6 py-3 rounded-lg transition-colors text-center w-full sm:w-auto",
              data: { turbo: true } %>
      </div>
    <% end %>
  </div>
</div>

