<div class="max-w-2xl mx-auto py-8 px-4" 
     data-controller="swipe-back" 
     data-swipe-back-back-url-value="<%= case @return_to
                                          when 'money_map'
                                            money_map_path(scroll_to: 'money-in-section')
                                          when 'income_templates'
                                            income_templates_path(return_to: @return_to)
                                          else
                                            income_events_path
                                          end %>"
     data-action="touchstart->swipe-back#touchStart touchmove->swipe-back#touchMove touchend->swipe-back#touchEnd">
  <div class="mb-6">
    <h1 class="text-3xl font-bold text-gray-900 mb-2">Edit Income</h1>
    <p class="text-gray-600 mb-4">Update the actual amount you received</p>
    <% back_path = case @return_to
                    when 'money_map'
                      money_map_path(scroll_to: 'money-in-section')
                    when 'income_templates'
                      income_templates_path(return_to: @return_to)
                    else
                      income_events_path
                    end %>
    <%# Back link removed - use swipe from left edge or Cancel button instead %>
  </div>

  <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-8">
    <%= form_with model: @income_event, url: income_event_path(@income_event), method: :patch, class: "space-y-6" do |f| %>
      <%= hidden_field_tag :return_to, @return_to if @return_to.present? %>
      
      <% if @income_event.errors.any? %>
        <div class="bg-red-50 border border-red-200 rounded-lg p-4 mb-6">
          <h3 class="text-red-800 font-semibold mb-2">
            <%= pluralize(@income_event.errors.count, "error") %> prevented this income from being saved:
          </h3>
          <ul class="list-disc list-inside text-red-700 space-y-1">
            <% @income_event.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <%= render "form", form: f, income_event: @income_event, 
            label_text: "Label",
            required: false,
            placeholder_text: "e.g., Paycheck, Bonus, Freelance",
            help_text: "Optional label for this income entry" %>

      <div class="flex gap-4 pt-4">
        <%= f.submit "Update Income", 
              class: "bg-green-600 hover:bg-green-700 text-white font-semibold px-6 py-3 rounded-lg transition-colors cursor-pointer flex-1" %>
        <%= link_to "Cancel", back_path, 
              class: "bg-gray-200 hover:bg-gray-300 text-gray-700 font-semibold px-6 py-3 rounded-lg transition-colors" %>
      </div>
    <% end %>

    <%# Show expected vs actual comparison and action buttons for template-based events (outside main form) %>
    <% if @income_event.income_template && @income_event.income_template.estimated_amount > 0 %>
      <div class="bg-blue-50 border border-blue-200 rounded-lg p-4 mb-4 mt-4">
        <div class="flex justify-between items-center">
          <div>
            <p class="text-sm font-medium text-gray-700 mb-1">Expected Amount</p>
            <p class="text-lg font-semibold text-gray-900"><%= number_to_currency(@income_event.income_template.estimated_amount) %></p>
          </div>
          <div class="text-right">
            <p class="text-sm font-medium text-gray-700 mb-1">Received Amount</p>
            <p class="text-lg font-semibold <%= @income_event.actual_amount > 0 ? 'text-green-600' : 'text-gray-400' %>">
              <%= number_to_currency(@income_event.actual_amount) %>
            </p>
          </div>
        </div>
      </div>

      <div class="flex gap-2 mb-4">
        <%= form_with url: mark_received_income_event_path(@income_event), method: :patch, 
              class: "flex-1",
              data: { turbo: true } do |f| %>
          <%= hidden_field_tag :return_to, @return_to if @return_to.present? %>
          <%= f.submit "Mark as Received", 
                class: "w-full bg-green-600 hover:bg-green-700 text-white font-semibold px-4 py-2 rounded-lg transition-colors" %>
        <% end %>
        <% if @income_event.actual_amount > 0 %>
          <%= form_with url: reset_to_expected_income_event_path(@income_event), method: :patch, 
                class: "flex-1",
                data: { turbo: true, turbo_confirm: "Reset actual amount to $0.00? This is useful if funds are delayed." } do |f| %>
            <%= hidden_field_tag :return_to, @return_to if @return_to.present? %>
            <%= f.submit "Reset to Expected", 
                  class: "w-full bg-orange-600 hover:bg-orange-700 text-white font-semibold px-4 py-2 rounded-lg transition-colors" %>
          <% end %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>

