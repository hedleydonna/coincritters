<div class="max-w-2xl mx-auto py-8 px-4">
  <div class="mb-6">
    <h1 class="text-3xl font-bold text-gray-900 mb-2">Edit Income</h1>
    <p class="text-gray-600 mb-4">Update the actual amount you received</p>
        <%= link_to "â† Back to Income This Month", income_events_path, class: "text-gray-600 hover:text-gray-900 font-medium" %>
  </div>

  <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-8">
    <%= form_with model: @income_event, url: income_event_path(@income_event), method: :patch, class: "space-y-6" do |f| %>
      <% if @income_event.errors.any? %>
        <div class="bg-red-50 border border-red-200 rounded-lg p-4 mb-6">
          <h3 class="text-red-800 font-semibold mb-2">
            <%= pluralize(@income_event.errors.count, "error") %> prevented this income from being saved:
          </h3>
          <ul class="list-disc list-inside text-red-700 space-y-1">
            <% @income_event.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div data-controller="income-select" data-income-select-incomes-value="<%= @income_data %>">
        <%= f.label :income_template_id, "Income Source", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= f.collection_select :income_template_id, @income_templates, :id, :name, 
              { prompt: "None - custom income", include_blank: true }, 
              { class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500", 
                data: { action: "change->income-select#updateAmount" } } %>
        <p class="mt-1 text-sm text-gray-500">
          The income source this event is linked to
        </p>
      </div>

      <div>
        <%= f.label :actual_amount, "How much did you receive?", class: "block text-sm font-medium text-gray-700 mb-2" do %>
          Amount <span class="text-red-500">*</span>
        <% end %>
        <div class="relative">
          <span class="absolute left-3 top-2 text-gray-500 text-lg">$</span>
          <%= f.number_field :actual_amount, 
                step: "0.01", 
                min: "0.01",
                placeholder: "0.00",
                required: true,
                autofocus: true,
                id: "income_event_actual_amount",
                class: "w-full px-4 py-3 pl-8 text-lg border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
        </div>
        <div id="estimated-amount-hint" class="mt-1 text-sm text-gray-500 hidden"></div>
      </div>

      <div>
        <%= f.label :custom_label, "Label (optional)", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= f.text_field :custom_label, 
              placeholder: "e.g., Paycheck, Bonus, Freelance",
              id: "income_event_custom_label",
              class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
        <p class="mt-1 text-sm text-gray-500">Only needed if you didn't select a source above</p>
      </div>

      <div>
        <%= f.label :received_on, "When did you receive this?", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= f.date_field :received_on, 
              class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
      </div>

      <div class="flex items-start gap-3">
        <%= f.check_box :apply_to_next_month, 
              { checked: @income_event.apply_to_next_month? },
              class: "mt-1 h-4 w-4 text-green-600 focus:ring-green-500 border-gray-300 rounded" %>
        <div>
          <%= f.label :apply_to_next_month, "Defer to next month", class: "text-sm font-medium text-gray-700 cursor-pointer" %>
          <p class="text-sm text-gray-500">When checked, this income will count toward next month's budget instead of the month it was received.</p>
        </div>
      </div>

      <div>
        <%= f.label :notes, "Notes (optional)", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= f.text_area :notes, 
              rows: 3,
              placeholder: "Optional notes about this income...",
              class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
      </div>

      <div class="flex gap-4 pt-4">
        <%= f.submit "Update Income", 
              class: "bg-green-600 hover:bg-green-700 text-white font-semibold px-6 py-3 rounded-lg transition-colors cursor-pointer flex-1" %>
        <%= link_to "Cancel", income_events_path, 
              class: "bg-gray-200 hover:bg-gray-300 text-gray-700 font-semibold px-6 py-3 rounded-lg transition-colors" %>
      </div>
    <% end %>
  </div>
</div>

