<div data-controller="pull-refresh">
  <!-- Pull to refresh indicator -->
  <div data-pull-refresh-target="indicator" 
       class="hidden fixed top-0 left-0 right-0 bg-blue-600 text-white text-center py-3 z-50 font-medium shadow-lg">
    Pull to refresh
  </div>

<div class="max-w-4xl mx-auto py-8 px-4">
  <!-- Header -->
  <div class="mb-6">
    <div class="flex items-center justify-between mb-4">
      <div>
        <h1 class="text-3xl font-bold text-gray-900">Income This Month</h1>
        <p class="text-gray-600 mt-1"><%= Date.parse("#{@viewing_month}-01").strftime("%B %Y") %></p>
      </div>
      <%= link_to "← Dashboard", dashboard_path, class: "text-gray-600 hover:text-gray-900 font-medium" %>
    </div>
    
    <!-- Month Navigation -->
    <div class="flex gap-2 mb-4">
      <%= link_to income_events_path(month: @current_month), 
            class: "px-4 py-3 rounded-lg font-medium transition-colors min-h-[44px] inline-flex items-center #{@is_current_month ? 'bg-blue-600 text-white' : 'bg-gray-200 text-gray-700 hover:bg-gray-300'}" do %>
        <%= Date.parse("#{@current_month}-01").strftime("%B %Y") %>
      <% end %>
      <%= link_to income_events_path(month: @next_month_str), 
            class: "px-4 py-3 rounded-lg font-medium transition-colors min-h-[44px] inline-flex items-center #{@is_next_month ? 'bg-blue-600 text-white' : 'bg-gray-200 text-gray-700 hover:bg-gray-300'}" do %>
        <%= Date.parse("#{@next_month_str}-01").strftime("%B %Y") %>
      <% end %>
    </div>
  </div>

  <!-- Top summary card -->
  <div class="bg-gradient-to-br from-green-50 to-emerald-50 rounded-xl p-6 mb-8 shadow-sm border border-green-100">
    <div class="grid grid-cols-2 md:grid-cols-3 gap-6">
      <div>
        <p class="text-sm text-gray-600 mb-1">Planned</p>
        <p class="text-2xl font-bold text-gray-900"><%= number_to_currency(@total_expected) %></p>
      </div>
      <div>
        <p class="text-sm text-gray-600 mb-1">Received</p>
        <p class="text-2xl font-bold text-gray-900"><%= number_to_currency(@total_actual) %></p>
      </div>
      <div>
        <p class="text-sm text-gray-600 mb-1">Still Coming</p>
        <p class="text-2xl font-bold <%= (@total_expected - @total_actual) > 0 ? 'text-orange-600' : 'text-green-600' %>">
          <%= number_to_currency(@total_expected - @total_actual) %>
        </p>
      </div>
    </div>
  </div>

  <!-- Add one-off income event button -->
  <div class="mb-6">
    <%= link_to "+ Log one-off income", new_income_event_path, 
          class: "bg-green-600 hover:bg-green-700 text-white font-semibold px-6 py-3 rounded-lg inline-flex items-center gap-2 transition-colors shadow-sm hover:shadow-md" %>
  </div>

  <!-- Income Events list -->
  <% if @income_events.any? %>
    <div class="space-y-4">
      <% @income_events.each do |event| %>
        <% if event.actual_amount == 0 && event.income_template && event.income_template.estimated_amount > 0 %>
          <!-- Swipeable income event item (only for unreceived events with expected amount) -->
          <div class="relative overflow-hidden touch-pan-y" 
               data-controller="swipe">
            <!-- Swipeable content -->
            <div data-swipe-target="content" 
                 class="bg-white rounded-lg shadow-sm border border-gray-200 p-6 hover:shadow-md transition-shadow">
              <div class="flex justify-between items-start mb-4">
                <div class="flex-1">
                  <h3 class="text-xl font-semibold text-gray-900 mb-1"><%= event.display_name %></h3>
                  <p class="text-gray-600 text-sm">
                    <%= event.received_on.strftime("%B %d, %Y") %>
                    <% if event.income_template %>
                      • Expected: <%= number_to_currency(event.income_template.estimated_amount) %>
                    <% end %>
                  </p>
                </div>
                <div class="text-right ml-4">
                  <p class="text-2xl font-bold text-gray-400">
                    $0.00
                  </p>
                  <p class="text-sm text-gray-500">not received</p>
                </div>
              </div>

              <!-- Comparison bar -->
              <% if event.income_template && event.income_template.estimated_amount > 0 %>
                <% expected = event.income_template.estimated_amount %>
                <div class="w-full bg-gray-200 rounded-full h-3 mb-4 overflow-hidden">
                  <div class="bg-gray-300 h-3 rounded-full" style="width: 0%"></div>
                </div>
                <div class="flex justify-between items-center text-sm">
                  <span class="text-gray-600">
                    Expected: <%= number_to_currency(expected) %>
                  </span>
                  <span class="text-gray-500 font-medium">
                    Not yet received
                  </span>
                </div>
              <% end %>

              <div class="flex justify-between items-center mt-4 pt-4 border-t border-gray-200">
                <div>
                  <% if event.income_template %>
                    <p class="text-sm text-gray-500">
                      Source: <%= event.income_template.name %> • <%= event.income_template.frequency.humanize %>
                      <% if event.apply_to_next_month? %>
                        <span class="text-orange-600 font-medium">• Deferred to next month</span>
                      <% end %>
                    </p>
                  <% else %>
                    <p class="text-sm text-gray-500">
                      One-off income
                      <% if event.apply_to_next_month? %>
                        <span class="text-orange-600 font-medium">• Deferred to next month</span>
                      <% end %>
                    </p>
                  <% end %>
                </div>
                <div class="flex gap-2 items-center flex-wrap">
                  <%= button_to "Received", mark_received_income_event_path(event), method: :patch,
                        class: "bg-green-600 hover:bg-green-700 text-white font-semibold px-4 py-3 rounded-lg transition-colors text-xs min-h-[44px] inline-flex items-center",
                        data: { confirm: "Mark as received with expected amount of #{number_to_currency(event.income_template.estimated_amount)}?" } %>
                  <%= button_to event.apply_to_next_month? ? "Count this month" : "Defer to next", 
                        toggle_defer_income_event_path(event), method: :patch,
                        class: "bg-orange-500 hover:bg-orange-600 text-white font-semibold px-4 py-3 rounded-lg transition-colors text-xs min-h-[44px] inline-flex items-center" %>
                  <%= link_to "Edit", edit_income_event_path(event), 
                        class: "bg-blue-600 hover:bg-blue-700 text-white font-semibold px-4 py-3 rounded-lg transition-colors text-xs min-h-[44px] inline-flex items-center" %>
                  <% if @is_current_month || @is_next_month %>
                    <%= button_to "Delete", income_event_path(event), method: :delete,
                          class: "bg-red-600 hover:bg-red-700 text-white font-semibold px-4 py-3 rounded-lg transition-colors text-xs min-h-[44px] inline-flex items-center",
                          data: { confirm: "Are you sure? This will remove #{number_to_currency(event.actual_amount)} from your budget." } %>
                  <% end %>
                </div>
              </div>
            </div>
            
            <!-- Hidden action buttons (revealed on swipe right) -->
            <div data-swipe-target="actions" 
                 class="hidden absolute right-0 top-0 h-full flex items-center pr-4 bg-green-600 rounded-r-lg">
              <%= form_with url: mark_received_income_event_path(event), method: :patch,
                    data: { turbo: true } do |f| %>
                <%= f.submit "Received", 
                      class: "bg-white text-green-600 font-semibold px-6 py-3 rounded-lg min-h-[44px] shadow-lg",
                      data: { action: "click->swipe#performAction" } %>
              <% end %>
            </div>
          </div>
        <% else %>
          <!-- Non-swipeable income event item (already received or no expected amount) -->
          <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6 hover:shadow-md transition-shadow">
            <div class="flex justify-between items-start mb-4">
              <div class="flex-1">
                <h3 class="text-xl font-semibold text-gray-900 mb-1"><%= event.display_name %></h3>
                <p class="text-gray-600 text-sm">
                  <%= event.received_on.strftime("%B %d, %Y") %>
                  <% if event.income_template %>
                    • Expected: <%= number_to_currency(event.income_template.estimated_amount) %>
                  <% end %>
                </p>
              </div>
              <div class="text-right ml-4">
                <% if event.actual_amount > 0 %>
                  <p class="text-2xl font-bold text-gray-900">
                    <%= number_to_currency(event.actual_amount) %>
                  </p>
                  <p class="text-sm text-gray-600">received</p>
                <% else %>
                  <p class="text-2xl font-bold text-gray-400">
                    $0.00
                  </p>
                  <p class="text-sm text-gray-500">not received</p>
                <% end %>
              </div>
            </div>

            <!-- Comparison bar -->
            <% if event.income_template && event.income_template.estimated_amount > 0 %>
              <% expected = event.income_template.estimated_amount %>
              <% actual = event.actual_amount %>
              <% if actual > 0 %>
                <% percentage = expected > 0 ? [(actual / expected * 100).round, 200].min : 0 %>
                <div class="w-full bg-gray-200 rounded-full h-3 mb-4 overflow-hidden">
                  <div class="bg-green-500 h-3 rounded-full transition-all duration-300" 
                       style="width: <%= [percentage, 100].min %>%"></div>
                  <% if percentage > 100 %>
                    <div class="bg-blue-500 h-3 rounded-full transition-all duration-300 -mt-3" 
                         style="width: <%= percentage - 100 %>%"></div>
                  <% end %>
                </div>
                <div class="flex justify-between items-center text-sm">
                  <span class="text-gray-600">
                    Expected: <%= number_to_currency(expected) %>
                  </span>
                  <span class="<%= actual >= expected ? 'text-green-600' : 'text-orange-600' %> font-medium">
                    <%= actual >= expected ? '✓' : '↓' %> <%= number_to_currency(actual - expected) %>
                  </span>
                </div>
              <% else %>
                <div class="w-full bg-gray-200 rounded-full h-3 mb-4 overflow-hidden">
                  <div class="bg-gray-300 h-3 rounded-full" style="width: 0%"></div>
                </div>
                <div class="flex justify-between items-center text-sm">
                  <span class="text-gray-600">
                    Expected: <%= number_to_currency(expected) %>
                  </span>
                  <span class="text-gray-500 font-medium">
                    Not yet received
                  </span>
                </div>
              <% end %>
            <% end %>

            <div class="flex justify-between items-center mt-4 pt-4 border-t border-gray-200">
              <div>
                <% if event.income_template %>
                  <p class="text-sm text-gray-500">
                    Source: <%= event.income_template.name %> • <%= event.income_template.frequency.humanize %>
                    <% if event.apply_to_next_month? %>
                      <span class="text-orange-600 font-medium">• Deferred to next month</span>
                    <% end %>
                  </p>
                <% else %>
                  <p class="text-sm text-gray-500">
                    One-off income
                    <% if event.apply_to_next_month? %>
                      <span class="text-orange-600 font-medium">• Deferred to next month</span>
                    <% end %>
                  </p>
                <% end %>
              </div>
              <div class="flex gap-2 items-center flex-wrap">
                <%= button_to event.apply_to_next_month? ? "Count this month" : "Defer to next", 
                      toggle_defer_income_event_path(event), method: :patch,
                      class: "bg-orange-500 hover:bg-orange-600 text-white font-semibold px-4 py-3 rounded-lg transition-colors text-xs min-h-[44px] inline-flex items-center" %>
                <%= link_to "Edit", edit_income_event_path(event), 
                      class: "bg-blue-600 hover:bg-blue-700 text-white font-semibold px-4 py-3 rounded-lg transition-colors text-xs min-h-[44px] inline-flex items-center" %>
                <% if @is_current_month || @is_next_month %>
                  <%= button_to "Delete", income_event_path(event), method: :delete,
                        class: "bg-red-600 hover:bg-red-700 text-white font-semibold px-4 py-3 rounded-lg transition-colors text-xs min-h-[44px] inline-flex items-center",
                        data: { confirm: "Are you sure? This will remove #{number_to_currency(event.actual_amount)} from your budget." } %>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  <% else %>
    <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-12 text-center">
      <p class="text-gray-500 text-lg mb-2">No income events yet for this month.</p>
      <p class="text-gray-400 mb-6">Create income sources with auto-create enabled to generate events automatically, or log one-off income manually.</p>
      <%= link_to "Income Sources", income_templates_path,
            class: "bg-green-600 hover:bg-green-700 text-white font-semibold px-6 py-3 rounded-lg inline-block mr-3" %>
      <%= link_to "Log one-off income", new_income_event_path,
            class: "bg-blue-600 hover:bg-blue-700 text-white font-semibold px-6 py-3 rounded-lg inline-block" %>
    </div>
  <% end %>
</div>
</div>

