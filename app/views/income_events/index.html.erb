<div data-controller="pull-refresh" class="fixed inset-0 bg-gradient-to-br from-green-50 to-emerald-50 overflow-y-auto px-4" style="top: 0; left: 0; right: 0; bottom: 5rem;">
  <!-- Pull to refresh indicator -->
  <div data-pull-refresh-target="indicator" 
       class="hidden fixed top-0 left-0 right-0 bg-green-600 text-white text-center py-3 z-50 font-medium shadow-lg">
    Pull to refresh
  </div>

<div class="w-full max-w-4xl mx-auto pt-4 pb-8">
  <!-- Header -->
  <div class="mb-6">
    <div class="flex items-center mb-4">
      <div class="flex items-center gap-3">
        <%= link_to dashboard_path, class: "bg-green-100 hover:bg-green-200 text-green-700 border border-green-300 font-semibold px-3 py-2 rounded-lg transition-colors min-h-[44px] min-w-[44px] inline-flex items-center justify-center", title: "Return to Dashboard" do %>
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
          </svg>
        <% end %>
        <div>
          <h1 class="text-3xl font-bold text-gray-900">Money In</h1>
          <p class="text-gray-600 mt-1"><%= Date.parse("#{@viewing_month}-01").strftime("%B %Y") %></p>
        </div>
      </div>
    </div>
    
    <!-- Month Navigation: Segmented Control Style (Mobile-Friendly) -->
    <div class="mb-4">
      <!-- Segmented Control for Current/Next -->
      <div class="inline-flex rounded-lg border border-green-300 bg-green-100 p-1 mb-3" role="tablist">
        <%= link_to income_events_path(month: @current_month), 
              class: "rounded-md px-4 py-3 text-sm font-medium transition-all min-h-[44px] inline-flex items-center #{@is_current_month ? 'bg-white text-green-600 shadow-sm' : 'text-gray-600 hover:text-gray-900'}" do %>
          <span class="hidden sm:inline"><%= Date.parse("#{@current_month}-01").strftime("%B %Y") %></span>
          <span class="sm:hidden">Current</span>
        <% end %>
        
        <%= link_to income_events_path(month: @next_month_str), 
              class: "rounded-md px-4 py-3 text-sm font-medium transition-all min-h-[44px] inline-flex items-center #{@is_next_month ? 'bg-white text-green-600 shadow-sm' : 'text-gray-600 hover:text-gray-900'}" do %>
          <span class="hidden sm:inline"><%= Date.parse("#{@next_month_str}-01").strftime("%B %Y") %></span>
          <span class="sm:hidden">Next</span>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Top summary card -->
  <div class="bg-green-100 rounded-xl p-3 sm:p-6 mb-8 shadow-sm border border-green-300">
    <% if @is_current_month && @carryover != 0 %>
      <div class="mb-3 pb-3 border-b border-green-200">
        <p class="text-xs sm:text-sm text-gray-600 mb-1">Available Income</p>
        <p class="text-sm sm:text-xl font-bold text-gray-900 break-words leading-tight">
          <%= number_to_currency(@available_income) %>
          <% if @carryover > 0 %>
            <span class="text-xs font-normal text-green-700 ml-2">(includes <%= number_to_currency(@carryover) %> from last month)</span>
          <% elsif @carryover < 0 %>
            <span class="text-xs font-normal text-red-700 ml-2">(includes <%= number_to_currency(@carryover.abs) %> debt from last month)</span>
          <% end %>
        </p>
      </div>
    <% end %>
    <div class="grid grid-cols-3 gap-1 sm:gap-4">
      <div class="text-center sm:text-left">
        <p class="text-xs sm:text-sm text-gray-600 mb-0.5 sm:mb-1">Planned</p>
        <p class="text-sm sm:text-2xl font-bold text-gray-900 break-words leading-tight"><%= number_to_currency(@total_expected) %></p>
      </div>
      <div class="text-center sm:text-left">
        <p class="text-xs sm:text-sm text-gray-600 mb-0.5 sm:mb-1">Received</p>
        <p class="text-sm sm:text-2xl font-bold text-gray-900 break-words leading-tight"><%= number_to_currency(@total_actual) %></p>
      </div>
      <div class="text-center sm:text-left">
        <p class="text-xs sm:text-sm text-gray-600 mb-0.5 sm:mb-1">Still Coming</p>
        <p class="text-sm sm:text-2xl font-bold <%= (@total_expected - @total_actual) > 0 ? 'text-orange-600' : 'text-green-600' %> break-words leading-tight">
          <%= number_to_currency(@total_expected - @total_actual) %>
        </p>
      </div>
    </div>
  </div>

  <!-- Income Events list -->
  <% if @income_events.any? %>
    <div class="space-y-4">
      <% @income_events.each do |event| %>
        <% if event.actual_amount == 0 && event.income_template && event.income_template.estimated_amount > 0 %>
          <!-- Swipeable income event item (only for unreceived events with expected amount) -->
          <div class="relative overflow-hidden touch-pan-y" 
               data-controller="swipe">
            <!-- Swipeable content -->
            <div data-swipe-target="content" 
                 class="bg-white rounded-lg shadow-sm border border-gray-200 p-6 hover:shadow-md transition-shadow">
              <div class="flex justify-between items-start mb-4">
                <div class="flex-1">
                  <h3 class="text-xl font-semibold text-gray-900 mb-1">
                    <%= event.display_name %>
                    <% if event.income_template %>
                      <span class="text-xs font-normal text-gray-500 ml-2"><%= event.income_template.frequency.humanize %></span>
                    <% else %>
                      <span class="text-xs font-normal text-gray-500 ml-2">Custom</span>
                    <% end %>
                  </h3>
                  <p class="text-gray-600 text-sm">
                    <%= event.received_on.strftime("%B %d, %Y") %>
                  </p>
                </div>
                <div class="text-right ml-4">
                  <p class="text-2xl font-bold text-gray-400">
                    $0.00
                  </p>
                  <p class="text-sm text-gray-500">not received</p>
                </div>
              </div>

              <!-- Comparison bar -->
              <% if event.income_template && event.income_template.estimated_amount > 0 %>
                <% expected = event.income_template.estimated_amount %>
                <div class="w-full bg-gray-200 rounded-full h-3 mb-4 overflow-hidden">
                  <div class="bg-gray-300 h-3 rounded-full" style="width: 0%"></div>
                </div>
                <div class="flex justify-between items-center text-sm">
                  <span class="text-gray-600">
                    Expected: <%= number_to_currency(expected) %>
                  </span>
                </div>
              <% end %>

              <div class="flex justify-start items-center mt-4 pt-4 border-t border-gray-200">
                <div class="flex gap-2 items-center flex-wrap">
                  <% if @is_current_month %>
                    <%= link_to edit_income_event_path(event), 
                          class: "bg-blue-600 hover:bg-blue-700 text-white p-3 rounded-lg transition-colors min-h-[44px] min-w-[44px] inline-flex items-center justify-center",
                          title: "Edit" do %>
                      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                      </svg>
                    <% end %>
                    <% if event.income_template_id.nil? %>
                      <%= button_to income_event_path(event), method: :delete,
                            class: "bg-red-600 hover:bg-red-700 text-white p-3 rounded-lg transition-colors min-h-[44px] min-w-[44px] inline-flex items-center justify-center",
                            title: "Delete",
                            data: { turbo_confirm: "⚠️ WARNING: This will permanently delete this income event and remove #{number_to_currency(event.actual_amount)} from your budget. This action cannot be undone and you may lose important financial data. Are you absolutely sure you want to proceed?" } do %>
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                        </svg>
                      <% end %>
                    <% end %>
                    <%= button_to mark_received_income_event_path(event), method: :patch,
                          class: "bg-green-600 hover:bg-green-700 text-white p-3 rounded-lg transition-colors min-h-[44px] min-w-[44px] inline-flex items-center justify-center",
                          title: "Mark as received",
                          data: { confirm: "Mark as received with expected amount of #{number_to_currency(event.income_template.estimated_amount)}?" } do %>
                      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                      </svg>
                    <% end %>
                  <% else %>
                    <span class="text-sm text-gray-400">Read-only view</span>
                  <% end %>
                </div>
              </div>
            </div>
            
            <!-- Hidden action buttons (revealed on swipe right) -->
            <div data-swipe-target="actions" 
                 class="hidden absolute right-0 top-0 h-full flex items-center pr-4 bg-green-600 rounded-r-lg">
              <%= form_with url: mark_received_income_event_path(event), method: :patch,
                    data: { turbo: true } do |f| %>
                <button type="submit" 
                        class="bg-white text-green-600 p-3 rounded-lg min-h-[44px] min-w-[44px] shadow-lg inline-flex items-center justify-center"
                        title="Mark as received"
                        data: { action: "click->swipe#performAction" }>
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                  </svg>
                </button>
              <% end %>
            </div>
          </div>
        <% else %>
          <!-- Non-swipeable income event item (already received or no expected amount) -->
          <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6 hover:shadow-md transition-shadow">
            <div class="flex justify-between items-start mb-4">
              <div class="flex-1">
                <h3 class="text-xl font-semibold text-gray-900 mb-1">
                  <%= event.display_name %>
                  <% if event.income_template %>
                    <span class="text-xs font-normal text-gray-500 ml-2"><%= event.income_template.frequency.humanize %></span>
                  <% else %>
                    <span class="text-xs font-normal text-gray-500 ml-2">Custom</span>
                  <% end %>
                </h3>
                <p class="text-gray-600 text-sm">
                  <%= event.received_on.strftime("%B %d, %Y") %>
                </p>
              </div>
              <div class="text-right ml-4">
                <% if event.actual_amount > 0 %>
                  <p class="text-2xl font-bold text-gray-900">
                    <%= number_to_currency(event.actual_amount) %>
                  </p>
                  <p class="text-sm text-gray-600">received</p>
                <% else %>
                  <p class="text-2xl font-bold text-gray-400">
                    $0.00
                  </p>
                  <p class="text-sm text-gray-500">not received</p>
                <% end %>
              </div>
            </div>

            <!-- Comparison bar -->
            <% if event.income_template && event.income_template.estimated_amount > 0 %>
              <% expected = event.income_template.estimated_amount %>
              <% actual = event.actual_amount %>
              <% if actual > 0 %>
                <% percentage = expected > 0 ? [(actual / expected * 100).round, 200].min : 0 %>
                <div class="w-full bg-gray-200 rounded-full h-3 mb-4 overflow-hidden">
                  <div class="bg-green-500 h-3 rounded-full transition-all duration-300" 
                       style="width: <%= [percentage, 100].min %>%"></div>
                  <% if percentage > 100 %>
                    <div class="bg-blue-500 h-3 rounded-full transition-all duration-300 -mt-3" 
                         style="width: <%= percentage - 100 %>%"></div>
                  <% end %>
                </div>
                <div class="flex justify-between items-center text-sm">
                  <span class="text-gray-600">
                    Expected: <%= number_to_currency(expected) %>
                  </span>
                  <span class="<%= actual >= expected ? 'text-green-600' : 'text-orange-600' %> font-medium">
                    <%= actual >= expected ? '✓' : '↓' %> <%= number_to_currency(actual - expected) %>
                  </span>
                </div>
              <% else %>
                <div class="w-full bg-gray-200 rounded-full h-3 mb-4 overflow-hidden">
                  <div class="bg-gray-300 h-3 rounded-full" style="width: 0%"></div>
                </div>
                <div class="flex justify-between items-center text-sm">
                  <span class="text-gray-600">
                    Expected: <%= number_to_currency(expected) %>
                  </span>
                </div>
              <% end %>
            <% end %>

            <div class="flex justify-start items-center mt-4 pt-4 border-t border-gray-200">
              <div class="flex gap-2 items-center flex-wrap">
                <% if @is_current_month %>
                  <%= link_to edit_income_event_path(event), 
                        class: "bg-blue-600 hover:bg-blue-700 text-white p-3 rounded-lg transition-colors min-h-[44px] min-w-[44px] inline-flex items-center justify-center",
                        title: "Edit" do %>
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                    </svg>
                  <% end %>
                  <% if event.income_template_id.nil? %>
                    <%= button_to income_event_path(event), method: :delete,
                          class: "bg-red-600 hover:bg-red-700 text-white p-3 rounded-lg transition-colors min-h-[44px] min-w-[44px] inline-flex items-center justify-center",
                          title: "Delete",
                          data: { turbo_confirm: "⚠️ WARNING: This will permanently delete this income event and remove #{number_to_currency(event.actual_amount)} from your budget. This action cannot be undone and you may lose important financial data. Are you absolutely sure you want to proceed?" } do %>
                      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                      </svg>
                    <% end %>
                  <% end %>
                <% else %>
                  <span class="text-sm text-gray-400">Read-only view</span>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  <% else %>
    <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-12 text-center">
      <p class="text-gray-500 text-lg mb-2">No income events yet for this month.</p>
      <p class="text-gray-400 mb-6">Create income sources with auto-create enabled to generate events automatically, or add custom income entries.</p>
    </div>
  <% end %>

  <!-- One-off income and Setup (only for current month) -->
  <% if @is_current_month %>
    <div class="mt-8 pt-6 border-t border-gray-200 flex flex-col sm:flex-row gap-4">
      <%= link_to "Add Custom Income", new_income_event_path, 
            class: "block w-full sm:w-1/2 bg-green-600 hover:bg-green-700 text-white font-semibold px-6 py-3 rounded-lg transition-colors text-center min-h-[44px] inline-flex items-center justify-center" %>
      
      <%= link_to "Manage Income Sources", income_templates_path(return_to: 'income_events'),
            class: "block w-full sm:w-1/2 bg-gray-600 hover:bg-gray-700 text-white font-semibold px-6 py-3 rounded-lg transition-colors text-center min-h-[44px] inline-flex items-center justify-center" %>
    </div>
  <% end %>
</div>
</div>

