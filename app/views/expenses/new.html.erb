<div class="max-w-2xl mx-auto py-8 px-4" data-controller="recurring-toggle">
  <div class="mb-6">
    <h1 class="text-3xl font-bold text-gray-900 mb-2">Add Spending</h1>
    <p class="text-gray-600 mb-4">Record an expense or create a recurring spending template</p>
    <% back_path = case @return_to
                    when 'money_map'
                      money_map_path
                    else
                      expenses_path(month: @viewing_month)
                    end %>
    <%= link_to "â† Back to #{@return_to == 'money_map' ? 'Money Map' : 'Spending'}", back_path, class: "text-gray-600 hover:text-gray-900 font-medium" %>
  </div>

  <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-8">
    <%= form_with model: @expense, url: expenses_path, class: "space-y-6" do |f| %>
      <%= hidden_field_tag :month, @viewing_month if @viewing_month %>
      <%= hidden_field_tag :return_to, @return_to if @return_to.present? %>
      
      <% if @expense.errors.any? %>
        <div class="bg-red-50 border border-red-200 rounded-lg p-4 mb-6">
          <h3 class="text-red-800 font-semibold mb-2">
            <%= pluralize(@expense.errors.count, "error") %> prevented this expense from being saved:
          </h3>
          <ul class="list-disc list-inside text-red-700 space-y-1">
            <% @expense.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <!-- Name -->
      <div>
        <%= f.label :name, "What is this expense for?", class: "block text-sm font-medium text-gray-700 mb-2" do %>
          Expense Name <span class="text-red-500">*</span>
        <% end %>
        <%= f.text_field :name, 
              value: @expense.read_attribute(:name),
              placeholder: "Enter name of expense",
              required: true,
              autofocus: true,
              class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-amber-500 focus:border-amber-500" %>
        <p class="mt-1 text-sm text-gray-500">A name or description for this expense</p>
      </div>

      <!-- Amount field (stays in place, label changes based on frequency) -->
      <div data-recurring-toggle-target="amountField">
        <label for="amount_input" class="block text-sm font-medium text-gray-700 mb-2" data-recurring-toggle-target="amountLabel">
          <span data-recurring-toggle-target="amountLabelText">Amount</span> <span class="text-red-500" data-recurring-toggle-target="amountRequired">*</span>
        </label>
        <div class="relative">
          <span class="absolute left-3 top-2 text-gray-500 text-lg">$</span>
          <%= f.number_field :allotted_amount, 
                id: "amount_input",
                step: "0.01", 
                min: "0",
                placeholder: "0.00",
                value: nil,
                required: true,
                data: { 
                  controller: "select-on-focus",
                  recurring_toggle_target: "amountInput",
                  one_off_name: "expense[allotted_amount]",
                  recurring_name: "default_amount"
                },
                class: "w-full px-4 py-3 pl-8 text-lg border border-gray-300 rounded-lg focus:ring-2 focus:ring-amber-500 focus:border-amber-500" %>
        </div>
        <p class="mt-1 text-sm text-gray-500" data-recurring-toggle-target="amountHelpText">The amount you plan to spend or have spent</p>
      </div>

      <!-- Frequency (always visible) -->
      <div>
        <label for="frequency" class="block text-sm font-medium text-gray-700 mb-2">
          How often? <span class="text-red-500">*</span>
        </label>
        <% frequency_value = (@preserved_params && @preserved_params[:frequency]) || params[:frequency] || "just_once" %>
        <%= select_tag :frequency, 
              options_for_select([
                ["Just once", "just_once"], 
                ["Monthly", "monthly"], 
                ["Bi-weekly", "bi_weekly"],
                ["Weekly", "weekly"],
                ["Yearly", "yearly"]
              ], frequency_value),
              { 
                id: "frequency",
                data: { 
                  action: "change->recurring-toggle#toggle",
                  recurring_toggle_target: "frequencySelect"
                },
                required: true,
                class: "w-full border border-gray-300 rounded-lg px-4 py-2 focus:ring-2 focus:ring-amber-500 focus:border-amber-500" } %>
        <p class="mt-1 text-sm text-gray-500">Select "Just once" for a one-time expense, or choose a frequency for recurring expenses</p>
      </div>

      <!-- Due Date (always visible, label changes based on frequency) -->
      <div data-recurring-toggle-target="dateField">
        <label for="due_date_input" class="block text-sm font-medium text-gray-700 mb-2" data-recurring-toggle-target="dateLabel">
          <span data-recurring-toggle-target="dateLabelText">Due Date</span> <span class="text-gray-500 text-xs" data-recurring-toggle-target="dateRequired">(optional)</span>
        </label>
        <% due_date_value = (@preserved_params && @preserved_params[:due_date]) || params[:due_date] || Date.today %>
        <%= date_field_tag :due_date, 
              due_date_value,
              id: "due_date_input",
              data: { 
                recurring_toggle_target: "dateInput",
                one_off_name: "due_date",
                recurring_name: "due_date"
              },
              class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-amber-500 focus:border-amber-500" %>
        <p class="mt-1 text-sm text-gray-500" data-recurring-toggle-target="dateHelpText">Optional: When this expense is typically due</p>
      </div>

      <div class="flex gap-4 pt-4">
        <%= f.submit "Add Spending", 
              class: "bg-amber-600 hover:bg-amber-700 text-white font-semibold px-6 py-3 rounded-lg transition-colors cursor-pointer flex-1" %>
        <%= link_to "Cancel", back_path, 
              class: "bg-gray-200 hover:bg-gray-300 text-gray-700 font-semibold px-6 py-3 rounded-lg transition-colors" %>
      </div>
    <% end %>
  </div>
</div>
