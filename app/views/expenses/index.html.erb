<div class="max-w-4xl mx-auto py-8 px-4">
  <!-- Header -->
  <div class="mb-6">
    <div class="flex items-center justify-between mb-4">
      <h1 class="text-3xl font-bold text-gray-900">Money Map</h1>
      <%= link_to "← Dashboard", dashboard_path, class: "text-gray-600 hover:text-gray-900 font-medium" %>
    </div>
    
    <!-- Month Navigation: Segmented Control Style (Mobile-Friendly) -->
    <div class="mb-4">
      <!-- Segmented Control for Current/Next -->
      <div class="inline-flex rounded-lg border border-gray-300 bg-gray-100 p-1 mb-3" role="tablist">
        <%= link_to expenses_path(month: @current_month), 
              class: "rounded-md px-4 py-2 text-sm font-medium transition-all #{@is_current_month ? 'bg-white text-blue-600 shadow-sm' : 'text-gray-600 hover:text-gray-900'}" do %>
          <span class="hidden sm:inline"><%= @current_budget&.name || @current_month %></span>
          <span class="sm:hidden">Current</span>
        <% end %>
        
        <%= link_to expenses_path(month: @next_month_str), 
              class: "rounded-md px-4 py-2 text-sm font-medium transition-all #{@is_next_month ? 'bg-white text-blue-600 shadow-sm' : 'text-gray-600 hover:text-gray-900'}" do %>
          <span class="hidden sm:inline"><%= @next_budget&.name || @next_month_str %></span>
          <span class="sm:hidden">Next</span>
        <% end %>
      </div>
      
      <!-- Past Months Dropdown (if any exist) -->
      <% if @past_months.any? %>
        <div class="mt-3 sm:mt-0 sm:inline-block sm:ml-3">
          <details class="relative">
            <summary class="px-4 py-2 text-sm text-gray-600 hover:text-gray-900 font-medium cursor-pointer border border-gray-300 rounded-lg bg-white hover:bg-gray-50 inline-block">
              Past months
            </summary>
            <div class="absolute left-0 mt-2 w-56 bg-white rounded-lg shadow-lg border border-gray-200 py-2 z-10">
              <% @past_months.each do |past_month| %>
                <% past_month_name = Date.parse("#{past_month}-01").strftime("%B %Y") %>
                <%= link_to past_month_name, expenses_path(month: past_month),
                      class: "block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100" %>
              <% end %>
            </div>
          </details>
        </div>
      <% end %>
    </div>
    
    <!-- View Mode Indicator -->
    <% if @is_past_month %>
      <div class="mb-4 p-3 bg-gray-50 border border-gray-200 rounded-lg">
        <p class="text-sm text-gray-600">
          <span class="font-medium">View only:</span> This is a past month. You can view expenses but cannot add payments or edit.
        </p>
      </div>
    <% elsif @is_next_month %>
      <div class="mb-4 p-3 bg-blue-50 border border-blue-200 rounded-lg">
        <p class="text-sm text-blue-700">
          <span class="font-medium">Planning mode:</span> You can edit allotted amounts and plan ahead, but cannot add payments until this month arrives.
        </p>
      </div>
    <% end %>
  </div>

  <!-- Top summary card -->
  <div class="bg-gradient-to-br from-blue-50 to-indigo-50 rounded-xl p-6 mb-8 shadow-sm border border-blue-100">
    <div class="grid grid-cols-2 md:grid-cols-4 gap-6">
      <div>
        <p class="text-sm text-gray-600 mb-1">Income this month</p>
        <p class="text-2xl font-bold text-gray-900"><%= number_to_currency(@total_income) %></p>
      </div>
      <div>
        <p class="text-sm text-gray-600 mb-1">Spent so far</p>
        <p class="text-2xl font-bold text-gray-900"><%= number_to_currency(@total_spent) %></p>
      </div>
      <div>
        <p class="text-sm text-gray-600 mb-1">Remaining</p>
        <p class="text-2xl font-bold <%= @remaining >= 0 ? 'text-green-600' : 'text-red-600' %>">
          <%= number_to_currency(@remaining) %>
        </p>
      </div>
      <div>
        <p class="text-sm text-gray-600 mb-1">Bank match</p>
        <p class="text-lg font-semibold">
          <% if @bank_match %>
            <span class="text-green-600">Close enough ✓</span>
          <% elsif @bank_difference.present? %>
            <span class="text-<%= @bank_difference.abs > 100 ? 'red' : 'yellow' %>-600">
              Off by <%= number_to_currency(@bank_difference.abs) %>
            </span>
          <% else %>
            <span class="text-gray-500">Not set</span>
          <% end %>
        </p>
      </div>
    </div>
  </div>

  <!-- Add payment button (only for current month) -->
  <% if @is_current_month %>
    <div class="mb-6">
      <%= link_to "+ Add payment", new_payment_path(month: @viewing_month), 
            class: "bg-blue-600 hover:bg-blue-700 text-white font-semibold px-6 py-3 rounded-lg inline-flex items-center gap-2 transition-colors shadow-sm hover:shadow-md" %>
    </div>
  <% end %>

  <!-- Expenses list -->
  <% if @expenses.any? %>
    <div class="space-y-4">
      <% @expenses.each do |expense| %>
        <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6 hover:shadow-md transition-shadow">
          <div class="flex justify-between items-start mb-4">
            <div class="flex-1">
              <h3 class="text-xl font-semibold text-gray-900 mb-1"><%= expense.display_name %></h3>
              <p class="text-gray-600 text-sm">
                <%= number_to_currency(expense.allotted_amount) %> allotted
              </p>
            </div>
            <div class="text-right ml-4">
              <p class="text-2xl font-bold <%= expense.over_budget? ? 'text-red-600' : 'text-gray-900' %>">
                <%= number_to_currency(expense.spent_amount) %>
              </p>
              <p class="text-sm text-gray-600">spent</p>
            </div>
          </div>

          <!-- Progress bar -->
          <div class="w-full bg-gray-200 rounded-full h-3 mb-4 overflow-hidden">
            <% percentage = expense.spent_percentage %>
            <% bar_color = expense.over_budget? ? 'bg-red-500' : (expense.paid? ? 'bg-green-500' : 'bg-blue-500') %>
            <div class="<%= bar_color %> h-3 rounded-full transition-all duration-300" 
                 style="width: <%= [percentage, 100].min %>%"></div>
          </div>

          <div class="flex justify-between items-center">
            <div>
              <p class="text-lg font-medium <%= expense.remaining < 0 ? 'text-red-600' : 'text-gray-900' %>">
                <%= number_to_currency(expense.remaining.abs) %> 
                <%= expense.remaining < 0 ? 'over' : 'left' %>
                <% if expense.paid? %>
                  <span class="text-green-600 font-bold ml-2">Paid ✓</span>
                <% end %>
              </p>
            </div>
            <% if @is_current_month %>
              <%= link_to "Add payment", new_payment_path(expense_id: expense.id, month: @viewing_month),
                    class: "text-blue-600 hover:text-blue-800 hover:underline text-sm font-medium" %>
            <% else %>
              <span class="text-sm text-gray-400">No payments in <%= @is_next_month ? "planning mode" : "past months" %></span>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-12 text-center">
      <p class="text-gray-500 text-lg mb-2">No expenses yet for this month.</p>
      <p class="text-gray-400 mb-6">Create expense templates to auto-generate expenses, or add a one-off expense below.</p>
      <%= link_to "Build Your Branches", expense_templates_path,
            class: "bg-blue-600 hover:bg-blue-700 text-white font-semibold px-6 py-3 rounded-lg inline-block" %>
    </div>
  <% end %>

  <!-- One-off expense (only for current and next month) -->
  <% unless @is_past_month %>
    <div class="mt-8 pt-6 border-t border-gray-200 text-center">
      <%= link_to "+ Add one-off expense", new_expense_path(month: @viewing_month), 
            class: "text-blue-600 hover:text-blue-800 hover:underline text-lg font-medium" %>
    </div>
  <% end %>
</div>

