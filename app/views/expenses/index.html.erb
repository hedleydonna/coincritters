<div data-controller="pull-refresh" class="fixed inset-0 bg-gradient-to-br from-amber-50 to-orange-50 overflow-y-auto px-4" style="top: 0; left: 0; right: 0; bottom: 5rem;">
  <!-- Pull to refresh indicator -->
  <div data-pull-refresh-target="indicator" 
       class="hidden fixed top-0 left-0 right-0 bg-amber-600 text-white text-center py-3 z-50 font-medium shadow-lg">
    Pull to refresh
  </div>

<div class="w-full max-w-4xl mx-auto pt-4 pb-8">
  <!-- Header -->
  <div class="mb-6">
    <div class="flex items-center mb-4">
      <div class="flex items-center gap-3">
        <%= link_to dashboard_path, class: "bg-amber-100 hover:bg-amber-200 text-amber-700 border border-amber-300 font-semibold px-3 py-2 rounded-lg transition-colors min-h-[44px] min-w-[44px] inline-flex items-center justify-center", title: "Return to Dashboard" do %>
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
          </svg>
        <% end %>
        <div>
          <h1 class="text-3xl font-bold text-gray-900">Spending</h1>
          <p class="text-gray-600 mt-1"><%= Date.parse("#{@viewing_month}-01").strftime("%B %Y") %></p>
        </div>
      </div>
    </div>
    
    <!-- Month Navigation: Segmented Control Style (Mobile-Friendly) -->
    <div class="mb-4">
      <!-- Segmented Control for Current/Next -->
      <div class="inline-flex rounded-lg border border-amber-300 bg-amber-100 p-1 mb-3" role="tablist">
        <%= link_to expenses_path(month: @current_month), 
              class: "rounded-md px-4 py-3 text-sm font-medium transition-all min-h-[44px] inline-flex items-center #{@is_current_month ? 'bg-white text-amber-600 shadow-sm' : 'text-gray-600 hover:text-gray-900'}" do %>
          <span class="hidden sm:inline"><%= Date.parse("#{@current_month}-01").strftime("%B %Y") %></span>
          <span class="sm:hidden">Current</span>
        <% end %>
        
        <%= link_to expenses_path(month: @next_month_str), 
              class: "rounded-md px-4 py-3 text-sm font-medium transition-all min-h-[44px] inline-flex items-center #{@is_next_month ? 'bg-white text-amber-600 shadow-sm' : 'text-gray-600 hover:text-gray-900'}" do %>
          <span class="hidden sm:inline"><%= Date.parse("#{@next_month_str}-01").strftime("%B %Y") %></span>
          <span class="sm:hidden">Next</span>
        <% end %>
      </div>
      
      <!-- Past Months Dropdown (if any exist) -->
      <% if @past_months.any? %>
        <div class="mt-3 sm:mt-0 sm:inline-block sm:ml-3">
          <details class="relative">
            <summary class="px-4 py-3 text-sm text-gray-600 hover:text-gray-900 font-medium cursor-pointer border border-gray-300 rounded-lg bg-white hover:bg-gray-50 inline-block min-h-[44px] inline-flex items-center">
              Past months
            </summary>
            <div class="absolute left-0 mt-2 w-56 bg-white rounded-lg shadow-lg border border-gray-200 py-2 z-10">
              <% @past_months.each do |past_month| %>
                <% past_month_name = Date.parse("#{past_month}-01").strftime("%B %Y") %>
                <%= link_to past_month_name, expenses_path(month: past_month),
                      class: "block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100" %>
              <% end %>
            </div>
          </details>
        </div>
      <% end %>
    </div>
    
    <!-- View Mode Indicator -->
    <% if @is_past_month %>
      <div class="mb-4 p-3 bg-gray-50 border border-gray-200 rounded-lg">
        <p class="text-sm text-gray-600">
          <span class="font-medium">View only:</span> This is a past month. You can view expenses but cannot add payments or edit.
        </p>
      </div>
    <% elsif @is_next_month %>
      <div class="mb-4 p-3 bg-blue-50 border border-blue-200 rounded-lg">
        <p class="text-sm text-blue-700">
          <span class="font-medium">Planning mode:</span> You can edit allotted amounts and plan ahead, but cannot add payments until this month arrives.
        </p>
      </div>
    <% end %>
  </div>

  <!-- Expenses Summary (only for current month) -->
  <% if @is_current_month %>
    <div class="bg-amber-100 rounded-xl p-3 sm:p-6 mb-6 shadow-sm border border-amber-300">
      <% flex_fund = @budget.remaining_to_assign %>
      <div class="grid grid-cols-3 gap-1 sm:gap-4">
        <div class="text-center sm:text-left">
          <p class="text-xs sm:text-sm text-gray-600 mb-0.5 sm:mb-1">Spent so far</p>
          <p class="text-sm sm:text-2xl font-bold text-gray-900 break-words leading-tight"><%= number_to_currency(@total_spent) %></p>
        </div>
        <div class="text-center sm:text-left">
          <p class="text-xs sm:text-sm text-gray-600 mb-0.5 sm:mb-1">Remaining</p>
          <p class="text-sm sm:text-2xl font-bold <%= @remaining >= 0 ? 'text-green-600' : 'text-red-600' %> break-words leading-tight">
            <%= number_to_currency(@remaining) %>
          </p>
        </div>
        <div class="text-center sm:text-left">
          <p class="text-xs sm:text-sm text-gray-600 mb-0.5 sm:mb-1">Flex Fund</p>
          <p class="text-sm sm:text-2xl font-bold <%= flex_fund >= 0 ? 'text-green-600' : 'text-orange-600' %> break-words leading-tight">
            <%= number_to_currency(flex_fund) %>
          </p>
        </div>
      </div>
    </div>
  <% end %>

  <!-- Expenses list -->
  <% if @expenses.any? %>
    <div class="space-y-4">
      <% @expenses.each do |expense| %>
        <% unless expense.paid? && @is_current_month %>
          <!-- Swipeable expense item (only for unpaid expenses in current month) -->
          <div class="relative overflow-hidden touch-pan-y" 
               data-controller="swipe">
            <!-- Swipeable content -->
            <div data-swipe-target="content" 
                 class="bg-white rounded-lg shadow-sm border border-gray-200 p-6 hover:shadow-md transition-shadow">
              <div class="flex justify-between items-start mb-4">
                <div class="flex-1">
                  <h3 class="text-xl font-semibold text-gray-900 mb-1"><%= expense.display_name %></h3>
                  <p class="text-gray-600 text-sm">
                    <%= number_to_currency(expense.allotted_amount) %> allotted
                  </p>
                </div>
                <div class="text-right ml-4">
                  <p class="text-2xl font-bold <%= expense.over_budget? ? 'text-red-600' : 'text-gray-900' %>">
                    <%= number_to_currency(expense.spent_amount) %>
                  </p>
                  <p class="text-sm text-gray-600">spent</p>
                </div>
              </div>

              <!-- Progress bar -->
              <div class="w-full bg-gray-200 rounded-full h-3 mb-4 overflow-hidden">
                <% percentage = expense.spent_percentage %>
                <% bar_color = expense.over_budget? ? 'bg-red-500' : (expense.paid? ? 'bg-green-500' : 'bg-blue-500') %>
                <div class="<%= bar_color %> h-3 rounded-full transition-all duration-300" 
                     style="width: <%= [percentage, 100].min %>%"></div>
              </div>

              <div class="flex justify-between items-center">
                <div>
                  <p class="text-lg font-medium <%= expense.remaining < 0 ? 'text-red-600' : 'text-gray-900' %>">
                    <%= number_to_currency(expense.remaining.abs) %> 
                    <%= expense.remaining < 0 ? 'over' : 'left' %>
                    <% if expense.paid? %>
                      <span class="text-green-600 font-bold ml-2">Paid ✓</span>
                    <% end %>
                  </p>
                </div>
                <div class="flex gap-2 items-center flex-wrap">
                  <% if @is_current_month %>
                    <% is_savings = expense.name.downcase.include?("savings") || expense.name.downcase.include?("emergency") %>
                    <% flex_fund = [@budget.remaining_to_assign, 0].max %>
                    
                    <% if is_savings && flex_fund > 0 %>
                      <!-- Sweep to Savings Form -->
                      <details class="relative">
                        <summary class="text-green-600 hover:text-green-800 hover:underline text-sm font-medium cursor-pointer">
                          Sweep to savings
                        </summary>
                        <div class="absolute right-0 mt-2 w-64 bg-white rounded-lg shadow-lg border border-gray-200 p-4 z-10">
                          <%= form_with url: sweep_to_savings_path(expense.id), method: :post, local: true, class: "space-y-3" do |f| %>
                            <%= hidden_field_tag :month, @viewing_month %>
                            <div>
                              <label class="block text-sm font-medium text-gray-700 mb-1">How much?</label>
                              <div class="relative">
                                <span class="absolute left-2 top-2 text-gray-500">$</span>
                                <%= number_field_tag :amount, flex_fund, 
                                      step: "0.01", 
                                      min: "0.01",
                                      max: flex_fund,
                                      class: "w-full px-4 py-2 pl-6 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-green-500" %>
                              </div>
                              <p class="mt-1 text-xs text-gray-500">Available: <%= number_to_currency(flex_fund) %></p>
                            </div>
                            <div class="flex gap-2">
                              <%= f.submit "Sweep", 
                                    class: "flex-1 bg-green-600 hover:bg-green-700 text-white font-semibold px-4 py-3 rounded-lg transition-colors cursor-pointer text-sm min-h-[44px]" %>
                              <button type="button" onclick="this.closest('details').removeAttribute('open')" 
                                      class="bg-gray-200 hover:bg-gray-300 text-gray-700 font-semibold px-4 py-3 rounded-lg transition-colors text-sm min-h-[44px]">
                                Cancel
                              </button>
                            </div>
                          <% end %>
                        </div>
                      </details>
                    <% end %>
                    
                    <% unless expense.paid? %>
                      <%= button_to mark_expense_paid_path(expense.id), method: :post,
                            class: "bg-green-600 hover:bg-green-700 text-white p-3 rounded-lg transition-colors min-h-[44px] min-w-[44px] inline-flex items-center justify-center",
                            title: "Mark as paid",
                            data: { confirm: "Mark as paid? This will add a payment of #{number_to_currency(expense.allotted_amount - expense.spent_amount)}." } do %>
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                        </svg>
                      <% end %>
                    <% end %>
                    
                    <%= link_to new_payment_path(expense_id: expense.id, month: @viewing_month),
                          class: "bg-blue-600 hover:bg-blue-700 text-white p-3 rounded-lg transition-colors min-h-[44px] min-w-[44px] inline-flex items-center justify-center",
                          title: "Add payment" do %>
                      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
                      </svg>
                    <% end %>
                    
                    <%= link_to edit_expense_path(expense.id, month: @viewing_month),
                          class: "bg-gray-600 hover:bg-gray-700 text-white p-3 rounded-lg transition-colors min-h-[44px] min-w-[44px] inline-flex items-center justify-center",
                          title: "Edit" do %>
                      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                      </svg>
                    <% end %>
                    
                    <% if expense.expense_template_id.nil? %>
                      <%= button_to expense_path(expense, month: @viewing_month), method: :delete,
                            class: "bg-red-600 hover:bg-red-700 text-white p-3 rounded-lg transition-colors min-h-[44px] min-w-[44px] inline-flex items-center justify-center",
                            title: "Delete",
                            data: { confirm: "Are you sure? This will delete this expense and all associated payments." } do %>
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                        </svg>
                      <% end %>
                    <% end %>
                  <% elsif @is_next_month %>
                    <%= link_to edit_expense_path(expense.id, month: @viewing_month),
                          class: "bg-gray-600 hover:bg-gray-700 text-white p-3 rounded-lg transition-colors min-h-[44px] min-w-[44px] inline-flex items-center justify-center",
                          title: "Edit" do %>
                      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                      </svg>
                    <% end %>
                    
                    <% if expense.expense_template_id.nil? %>
                      <%= button_to expense_path(expense, month: @viewing_month), method: :delete,
                            class: "bg-red-600 hover:bg-red-700 text-white p-3 rounded-lg transition-colors min-h-[44px] min-w-[44px] inline-flex items-center justify-center",
                            title: "Delete",
                            data: { confirm: "Are you sure? This will delete this expense and all associated payments." } do %>
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                        </svg>
                      <% end %>
                    <% end %>
                  <% else %>
                    <span class="text-sm text-gray-400">View only</span>
                  <% end %>
                </div>
              </div>
            </div>
            
            <!-- Hidden action buttons (revealed on swipe right) -->
            <% if @is_current_month && !expense.paid? %>
              <div data-swipe-target="actions" 
                   class="hidden absolute right-0 top-0 h-full flex items-center pr-4 bg-green-600 rounded-r-lg">
                <%= form_with url: mark_expense_paid_path(expense.id), method: :post,
                      data: { turbo: true } do |f| %>
                  <button type="submit" 
                          class="bg-white text-green-600 p-3 rounded-lg min-h-[44px] min-w-[44px] shadow-lg inline-flex items-center justify-center"
                          title: "Mark as paid",
                          data: { action: "click->swipe#performAction" }>
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                    </svg>
                  </button>
                <% end %>
              </div>
            <% end %>
          </div>
        <% else %>
          <!-- Non-swipeable expense item (paid or not current month) -->
          <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6 hover:shadow-md transition-shadow">
            <div class="flex justify-between items-start mb-4">
              <div class="flex-1">
                <h3 class="text-xl font-semibold text-gray-900 mb-1"><%= expense.display_name %></h3>
                <p class="text-gray-600 text-sm">
                  <%= number_to_currency(expense.allotted_amount) %> allotted
                </p>
              </div>
              <div class="text-right ml-4">
                <p class="text-2xl font-bold <%= expense.over_budget? ? 'text-red-600' : 'text-gray-900' %>">
                  <%= number_to_currency(expense.spent_amount) %>
                </p>
                <p class="text-sm text-gray-600">spent</p>
              </div>
            </div>

            <!-- Progress bar -->
            <div class="w-full bg-gray-200 rounded-full h-3 mb-4 overflow-hidden">
              <% percentage = expense.spent_percentage %>
              <% bar_color = expense.over_budget? ? 'bg-red-500' : (expense.paid? ? 'bg-green-500' : 'bg-blue-500') %>
              <div class="<%= bar_color %> h-3 rounded-full transition-all duration-300" 
                   style="width: <%= [percentage, 100].min %>%"></div>
            </div>

            <div class="flex justify-between items-center">
              <div>
                <p class="text-lg font-medium <%= expense.remaining < 0 ? 'text-red-600' : 'text-gray-900' %>">
                  <%= number_to_currency(expense.remaining.abs) %> 
                  <%= expense.remaining < 0 ? 'over' : 'left' %>
                  <% if expense.paid? %>
                    <span class="text-green-600 font-bold ml-2">Paid ✓</span>
                  <% end %>
                </p>
              </div>
              <div class="flex gap-2 items-center flex-wrap">
                <% if @is_current_month %>
                  <%= link_to new_payment_path(expense_id: expense.id, month: @viewing_month),
                        class: "bg-blue-600 hover:bg-blue-700 text-white p-3 rounded-lg transition-colors min-h-[44px] min-w-[44px] inline-flex items-center justify-center",
                        title: "Add payment" do %>
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
                    </svg>
                  <% end %>
                  
                  <%= link_to edit_expense_path(expense.id, month: @viewing_month),
                        class: "bg-gray-600 hover:bg-gray-700 text-white p-3 rounded-lg transition-colors min-h-[44px] min-w-[44px] inline-flex items-center justify-center",
                        title: "Edit" do %>
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                    </svg>
                  <% end %>
                <% elsif @is_next_month %>
                  <%= link_to edit_expense_path(expense.id, month: @viewing_month),
                        class: "bg-gray-600 hover:bg-gray-700 text-white p-3 rounded-lg transition-colors min-h-[44px] min-w-[44px] inline-flex items-center justify-center",
                        title: "Edit" do %>
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                    </svg>
                  <% end %>
                <% else %>
                  <span class="text-sm text-gray-400">View only</span>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  <% else %>
    <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-12 text-center">
      <p class="text-gray-500 text-lg mb-2">No expenses yet for this month.</p>
      <p class="text-gray-400 mb-6">Create expense templates to auto-generate expenses, or add a custom expense below.</p>
    </div>
  <% end %>

  <!-- One-off expense and Setup (only for current and next month) -->
  <% unless @is_past_month %>
    <div class="mt-8 pt-6 border-t border-gray-200 flex flex-col sm:flex-row gap-4">
      <%= link_to "Add custom expense", new_expense_path(month: @viewing_month), 
            class: "block w-full sm:w-1/2 bg-amber-600 hover:bg-amber-700 text-white font-semibold px-6 py-3 rounded-lg transition-colors text-center min-h-[44px] inline-flex items-center justify-center" %>
      
      <%= link_to "Manage Spending", expense_templates_path(return_to: 'expenses'),
            class: "block w-full sm:w-1/2 bg-gray-600 hover:bg-gray-700 text-white font-semibold px-6 py-3 rounded-lg transition-colors text-center min-h-[44px] inline-flex items-center justify-center" %>
    </div>
  <% end %>
</div>
</div>

