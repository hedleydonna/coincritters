<div class="w-full max-w-4xl mx-auto">
  <div class="flex justify-between items-center mb-6">
    <div class="flex items-center gap-3">
      <% case @return_to %>
      <% when 'expenses' %>
        <%= link_to expenses_path,
              class: "inline-flex items-center justify-center bg-gray-100 hover:bg-gray-200 text-gray-700 p-3 rounded-lg transition-colors min-h-[44px] min-w-[44px]",
              title: "Back to Spending" do %>
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
          </svg>
        <% end %>
      <% else %>
        <%= link_to dashboard_path,
              class: "inline-flex items-center justify-center bg-gray-100 hover:bg-gray-200 text-gray-700 p-3 rounded-lg transition-colors min-h-[44px] min-w-[44px]",
              title: "Return to Dashboard" do %>
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
          </svg>
        <% end %>
      <% end %>
      <h1 class="text-3xl font-bold text-gray-900">Set Up Your Spending</h1>
    </div>
    <%= link_to "Add new spending", new_expense_template_path(return_to: @return_to),
          class: "bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700 transition-colors font-medium",
          title: "Add a new spending item" %>
  </div>

  <p class="text-gray-600 mb-6">
    Create spending items for your regular expenses. The system will automatically add these to your monthly budgets based on frequency and due dates, so you only need to set this up once.
  </p>

  <% if @templates.any? %>
    <div class="space-y-4">
      <% @templates.each do |template| %>
        <div class="bg-white shadow rounded-lg p-6 flex justify-between items-center hover:shadow-md transition-shadow">
          <div class="flex-1">
            <h3 class="text-lg font-semibold text-gray-900 mb-2"><%= template.display_name %></h3>
            <div class="flex flex-wrap gap-3 text-sm text-gray-600">
              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                <%= template.frequency_text %>
              </span>
              <% if template.default_amount.present? && template.default_amount > 0 %>
                <span class="text-gray-700">
                  <strong><%= number_to_currency(template.default_amount) %></strong> default
                </span>
              <% end %>
              <span class="text-gray-600">
                <%= template.auto_create? ? "âœ“ Auto-add every month" : "One-time only" %>
              </span>
            </div>
          </div>
          <div class="flex gap-3 ml-4">
            <%= link_to edit_expense_template_path(template, return_to: @return_to), 
                  class: "bg-blue-600 hover:bg-blue-700 text-white p-3 rounded-lg transition-colors min-h-[44px] min-w-[44px] inline-flex items-center justify-center",
                  title: "Edit this spending item" do %>
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
              </svg>
            <% end %>
            <%= button_to expense_template_path(template, return_to: @return_to), method: :delete,
                  data: { turbo_confirm: "WARNING: Deleting this spending item may result in loss of historical data and could be difficult to recover. This will stop it from appearing in new months. Are you really sure you want to do this?" },
                  class: "bg-red-600 hover:bg-red-700 text-white p-3 rounded-lg transition-colors min-h-[44px] min-w-[44px] inline-flex items-center justify-center",
                  title: "Delete this spending item" do %>
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
              </svg>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="bg-white shadow rounded-lg p-12 text-center">
      <p class="text-gray-500 text-lg mb-4">No spending items yet.</p>
      <p class="text-gray-400 mb-6">Create your first spending item to start organizing your budget!</p>
      <%= link_to "Add your first spending item", new_expense_template_path(return_to: @return_to),
            class: "bg-blue-600 text-white px-6 py-3 rounded-lg hover:bg-blue-700 transition-colors font-medium inline-block",
            title: "Create your first spending item" %>
    </div>
  <% end %>
</div>

