<div class="w-full max-w-4xl mx-auto">
  <div class="mb-4">
    <%= link_to "← Return to Dashboard", dashboard_path,
          class: "text-gray-600 hover:text-gray-900 font-medium" %>
  </div>
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-3xl font-bold text-gray-900">Build Your Branches</h1>
    <%= link_to "Add new branch", new_expense_template_path,
          class: "bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700 transition-colors font-medium" %>
  </div>

  <% if @templates.any? %>
    <div class="space-y-4">
      <% @templates.each do |template| %>
        <div class="bg-white shadow rounded-lg p-6 flex justify-between items-center hover:shadow-md transition-shadow">
          <div class="flex-1">
            <h3 class="text-lg font-semibold text-gray-900 mb-2"><%= template.display_name %></h3>
            <div class="flex flex-wrap gap-3 text-sm text-gray-600">
              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                <%= template.frequency_text %>
              </span>
              <% if template.default_amount.present? && template.default_amount > 0 %>
                <span class="text-gray-700">
                  <strong><%= number_to_currency(template.default_amount) %></strong> default
                </span>
              <% end %>
              <span class="text-gray-600">
                <%= template.auto_create? ? "✓ Auto-add every month" : "One-time only" %>
              </span>
            </div>
          </div>
          <div class="flex gap-3 ml-4">
            <%= link_to "Edit", edit_expense_template_path(template), 
                  class: "text-blue-600 hover:text-blue-800 hover:underline font-medium" %>
            <%= button_to "Turn off", expense_template_path(template), method: :delete,
                  data: { confirm: "Turn off this branch? It will stop appearing in new months but can be turned back on later." },
                  class: "text-red-600 hover:text-red-800 hover:underline font-medium bg-transparent border-0 p-0 cursor-pointer" %>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="bg-white shadow rounded-lg p-12 text-center">
      <p class="text-gray-500 text-lg mb-4">No branches yet.</p>
      <p class="text-gray-400 mb-6">Create your first branch to start organizing your budget!</p>
      <%= link_to "Add your first branch", new_expense_template_path,
            class: "bg-blue-600 text-white px-6 py-3 rounded-lg hover:bg-blue-700 transition-colors font-medium inline-block" %>
    </div>
  <% end %>

  <% if @inactive_templates.any? %>
    <div class="mt-20 pt-8 border-t border-gray-200">
      <h2 class="text-2xl font-bold text-gray-700 mb-4">Turned Off Branches</h2>
      <p class="text-gray-500 text-sm mb-6">These branches are disabled and won't appear in new monthly budgets.</p>
      <div class="space-y-4">
        <% @inactive_templates.each do |template| %>
          <div class="bg-gray-50 shadow rounded-lg p-6 flex justify-between items-center border border-gray-200">
            <div class="flex-1">
              <h3 class="text-lg font-semibold text-gray-600 mb-2"><%= template.display_name %></h3>
              <div class="flex flex-wrap gap-3 text-sm text-gray-500">
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-200 text-gray-600">
                  <%= template.frequency_text %>
                </span>
                <% if template.default_amount.present? && template.default_amount > 0 %>
                  <span class="text-gray-500">
                    <strong><%= number_to_currency(template.default_amount) %></strong> default
                  </span>
                <% end %>
                <span class="text-gray-500 italic">Turned off</span>
              </div>
            </div>
            <div class="flex gap-3 ml-4">
              <%= button_to "Turn on", reactivate_expense_template_path(template), method: :patch,
                    class: "bg-green-600 text-white px-4 py-2 rounded-lg hover:bg-green-700 transition-colors font-medium" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>
</div>

