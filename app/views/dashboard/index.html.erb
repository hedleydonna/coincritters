<div class="min-h-screen bg-gray-50 flex items-center justify-center">
  <div class="max-w-md w-full bg-white rounded-xl shadow-lg p-8 text-center">
    <h1 class="text-5xl font-bold text-transparent bg-clip-text bg-gradient-to-r from-purple-600 to-pink-600 mb-4">
      Welcome back, <%= current_user.display_name.presence || current_user.email.split("@").first.capitalize %>!
    </h1>
    
    <div class="mt-8">
      <%= image_tag "willow.png", alt: "Baby Willow", class: "mx-auto h-24 w-24 object-contain" %>
      <p class="text-2xl text-gray-600 mt-4">
        Your willow tree is ready to grow!
      </p>
    </div>

    <div class="mt-10 space-y-4">
      <%= button_to "View Money Map", expenses_path, method: :get,
                    class: "bg-purple-600 hover:bg-purple-700 text-white font-bold py-3 px-6 rounded-lg w-full" %>
      
      <%= button_to "Set Up Expenses", expense_templates_path, method: :get,
                    class: "bg-green-500 hover:bg-green-600 text-white font-bold py-3 px-6 rounded-lg w-full" %>
      
      <hr>
      <%= button_to "Income This Month", income_events_path, method: :get,
                    class: "bg-emerald-600 hover:bg-emerald-700 text-white font-bold py-3 px-6 rounded-lg w-full" %>

      <%= button_to "Set Up Income Sources", incomes_path, method: :get,
                    class: "bg-emerald-500 hover:bg-emerald-600 text-white font-bold py-3 px-6 rounded-lg w-full" %>
      
      <hr>
      <%= form_with url: edit_user_registration_path, method: :get, local: true, class: "w-full" do |f| %>
        <%= f.submit "Edit Profile", class: "bg-blue-500 hover:bg-blue-600 text-white font-bold py-3 px-6 rounded-lg w-full cursor-pointer" %>
      <% end %>

      <!-- Admin Dashboard -->
      <% if current_user&.admin? %>
        <%= button_to "Admin Dashboard", admin_root_path, method: :get,
                    class: "bg-blue-500 hover:bg-blue-600 text-white font-bold py-3 px-6 rounded-lg w-full" %>
      <% end %>

      <%= button_to "Sign out", destroy_user_session_path, method: :delete,
                    class: "bg-red-500 hover:bg-red-600 text-white font-bold py-3 px-6 rounded-lg w-full" %>
    </div>

    <div class="mt-10 text-center">
      <%= link_to "Credits", credits_path, class: "text-sm text-gray-500 hover:text-gray-700 hover:underline" %>
    </div>
  </div>
</div>
