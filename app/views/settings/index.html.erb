<div class="max-w-2xl mx-auto py-8 px-4">
  <div class="mb-6">
    <h1 class="text-3xl font-bold text-gray-900 mb-2">Settings</h1>
    <p class="text-gray-600">Manage your account and preferences</p>
  </div>

  <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-8 space-y-6">
    <div>
      <h2 class="text-xl font-semibold text-gray-900 mb-4">Account</h2>
      <%= link_to edit_user_registration_path, 
            class: "block px-4 py-3 bg-blue-50 hover:bg-blue-100 rounded-lg border border-blue-200 transition-colors" do %>
